    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 111.</fw>
                <l xml:id="l.1"><gap extent="unknown" reason="damage" unit="line"/></l>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.2">Azért, hogy szivembe, igaz hűségembe</l>
                    <l n="2" xml:id="l.3">Gánczot nem lelt hálája.</l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="3" xml:id="l.4">Ne bűntesse Isten hiti szerint, kérem,</l>
                    <l n="4" xml:id="l.5">De czak meg ismértesse</l>
                    <l n="5" xml:id="l.6"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Véle, hogy mie volt, s hozzá mely igaz
                                vólt</lem>
                            <rdg wit="#W1" xml:id="rdg.1"><del corresp="copyist">mi</del><add
                                    corresp="copyist" type="corr">mie</add></rdg>
                        </app></l>
                    <l n="6" xml:id="l.7">Szivem, s meg emlegesse,</l>
                    <l n="7" xml:id="l.8">Vétkeit siratván, kőnyveket hullatván</l>
                    <l n="8" xml:id="l.9">Istennet meg kövesse.</l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="9" xml:id="l.10">3. Csak Istenre bizom, kibe hóltig bizom,</l>
                    <l n="10" xml:id="l.11">Már minden bánatimot,</l>
                    <l n="11" xml:id="l.12">Neve az Vers föbe, az kihez mindenbe</l>
                    <l n="12" xml:id="l.13">Hű vóltom, s ezzel szómot</l>
                    <l n="13" xml:id="l.14"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Végezvén óhajtom, es szivessen varom</lem>
                            <rdg wit="#W1" xml:id="rdg.2"><del corresp="corrector">s</del><add
                                    corresp="corrector" type="corr">es</add></rdg>
                        </app></l>
                    <l n="14" xml:id="l.15">Bóldog ki múlásomot.</l>
                </lg>
            </div>
        </body>
