    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 29.</fw>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1">Az ezer hat százban s-nyólczvan harmadikban,</l>
                    <l n="2" xml:id="l.2"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">karácsony havában s-hetinek
                                folytában,</lem>
                            <rdg wit="#W1" xml:id="rdg.1">Karácson</rdg>
                        </app></l>
                    <l n="3" xml:id="l.3">Munkács kö várában s-kemény rabságomban,</l>
                    <l n="4" xml:id="l.4"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">hoszszú unalomban, nyomorúságomban</lem>
                            <rdg wit="#W1" xml:id="rdg.2">hoszu</rdg>
                        </app></l>
                    <l n="5" xml:id="l.5">Ezeket gondoltam, elmémben forgattam,</l>
                    <l n="6" xml:id="l.6">koholtam, faragtam, toldoztam, s-foldoztam,</l>
                    <l n="7" xml:id="l.7">Nótámra csináltam, s-magamban dúdoltam,</l>
                    <l n="8" xml:id="l.8">el úntam, s-el hattam, s-Istent sohajtottam.</l>
                </lg>
                <p xml:id="p.1">Az rabság terhe könnYebeDésére</p>
                <p xml:id="p.2">szerzet Verseknek Vége,</p>
                <p xml:id="p.3">De nInCs az rabságnak Vége,</p>
                <p xml:id="p.4">EngeD, Vr Isten, LegYen annakIs Ió Vége.</p>
            </div>
        </body>
