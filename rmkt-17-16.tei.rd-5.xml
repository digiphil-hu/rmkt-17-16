    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 5.</fw>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1">Vajha Szent Istvannak Bocskai Istvánnya,</l>
                    <l n="2" xml:id="l.2"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Corvinus Mátyásnak Iktári Gáborja<note
                                    type="critic" xml:id="note.1"><persName>Bethlen Gábor<idno
                                            type="ITIdata">Q41495</idno></persName> (<date
                                        from="1580" to="1629">1580–1629</date>)
                                fejedelem</note></lem>
                            <rdg wit="#K1" xml:id="rdg.1">Akar Corvinusnak</rdg>
                            <rdg wit="#K4a" xml:id="rdg.2">Máttyás Corvinusnak</rdg>
                            <rdg wit="#K4b #K10j #K-I" xml:id="rdg.3">Mátyás Corvinusnak</rdg>
                            <rdg wit="#K-Ia" xml:id="rdg.4">Mátyás Corvinusnak Ictavi Táborja</rdg>
                            <rdg wit="#K-Ib" xml:id="rdg.5">Máttyas Corvinusnak</rdg>
                            <rdg wit="#K5j" xml:id="rdg.6">Matyas Corvinusnak</rdg>
                            <rdg wit="#K-Id #K-II" xml:id="rdg.7">Mátyás Corvinusnak</rdg>
                            <rdg wit="#K-IIa" xml:id="rdg.8"> Matyas Corvinusnak</rdg>
                            <rdg wit="#K-IIc #K-III" xml:id="rdg.9">Mátyás Corvinusnak</rdg>
                            <rdg wit="#K-IIIa" xml:id="rdg.10">Máttyás Corvinusnak</rdg>
                        </app></l>
                    <l n="3" xml:id="l.3"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Hevenyén nyomokban bé hághatnak
                                vala,</lem>
                            <rdg wit="#K3" xml:id="rdg.11">Hevennyén</rdg>
                            <rdg wit="#K4a" xml:id="rdg.12">be Léphetnek</rdg>
                            <rdg wit="#K4b" xml:id="rdg.13">nyomokba</rdg>
                            <rdg wit="#K10j" xml:id="rdg.14">nyomdokba</rdg>
                            <rdg wit="#K-Ia" xml:id="rdg.15">bé hág<add type="insert"
                                >h</add>atnak</rdg>
                            <rdg wit="#K-III #K-IIIa" xml:id="rdg.16">Hevenyék</rdg>
                        </app></l>
                    <l n="4" xml:id="l.4"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Meg volna Szalonnán mind sodor<note
                                    type="critic" xml:id="note.2">sódar: sonka</note>, s mind
                                    orja<note type="critic" xml:id="note.3"
                                >sertésgerinc</note>.</lem>
                            <rdg wit="#K4b" xml:id="rdg.17">sodar</rdg>
                            <rdg wit="#K5a" xml:id="rdg.18"> mind sodor, mind</rdg>
                            <rdg wit="#K6a" xml:id="rdg.19">még volna; sodor, mint</rdg>
                            <rdg wit="#K-Ib" xml:id="rdg.20">Szalannán</rdg>
                            <rdg wit="#K-Id" xml:id="rdg.21">mind sodor s orja</rdg>
                            <rdg wit="#K-IIa" xml:id="rdg.22">mind fodor</rdg>
                            <rdg wit="#K-IIc" xml:id="rdg.23">mind sódórja s orja</rdg>
                        </app></l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="5" xml:id="l.5"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Be szépen kezdödek e’ Seculum veled,</lem>
                            <rdg wit="#K1 #K2" xml:id="rdg.24"> Beg</rdg>
                            <rdg wit="#K3" xml:id="rdg.25">Begh</rdg>
                            <rdg wit="#K4a #K4b" xml:id="rdg.26">Beg</rdg>
                            <rdg wit="#K10j" xml:id="rdg.27">a seculum</rdg>
                            <rdg wit="#K5a" xml:id="rdg.28">Beg; a Saeculum</rdg>
                            <rdg wit="#K6a" xml:id="rdg.29">Beg</rdg>
                            <rdg wit="#K-Ia" xml:id="rdg.30"><del>De</del><add type="corr"
                                >Be</add></rdg>
                        </app></l>
                    <l n="6" xml:id="l.6"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Ki tudgya, mint fógy el ma holnap
                                kivülled,</lem>
                            <rdg wit="#K1" xml:id="rdg.31">Beg rutul végzödik</rdg>
                            <rdg wit="#K4a" xml:id="rdg.32"> De rútul végződik</rdg>
                            <rdg wit="#K4b" xml:id="rdg.33">Be rútúl végződik</rdg>
                            <rdg wit="#K10j" xml:id="rdg.34">De rutul végződik</rdg>
                            <rdg wit="#K5a" xml:id="rdg.35">De roszul fogya el ezis ám</rdg>
                            <rdg wit="#K-I" xml:id="rdg.36">Be rutul végződik</rdg>
                            <rdg wit="#K-Ia" xml:id="rdg.37"><del>Be</del><add type="corr">De</add>
                                rutul végződík</rdg>
                            <rdg wit="#K-Ib" xml:id="rdg.38">Be rutul Végződék</rdg>
                            <rdg wit="#K5j" xml:id="rdg.39"> Be rútúl végzödék; kivülek</rdg>
                            <rdg wit="#K-Id" xml:id="rdg.40">Be rutul végződik</rdg>
                            <rdg wit="#K-II #K-IIa" xml:id="rdg.41">Be rutul végzödik</rdg>
                            <rdg wit="#K-IIc" xml:id="rdg.42">Be rútúl végzödik</rdg>
                            <rdg wit="#K-III #K-IIIa" xml:id="rdg.43">Be rutul végzödik</rdg>
                        </app></l>
                    <l n="7" xml:id="l.7"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Mint vagyunk, s mint lészünk, nincsen
                                benne hired,</lem>
                            <rdg wit="#K2" xml:id="rdg.44">nincen</rdg>
                            <rdg wit="#K5a" xml:id="rdg.45">vagyunk, mint</rdg>
                        </app></l>
                    <l n="8" xml:id="l.8"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Már mi csak sohajtunk, s ugy emlitünk
                                téged.</lem>
                            <rdg wit="#K2" xml:id="rdg.46">emlétünk</rdg>
                            <rdg wit="#K3" xml:id="rdg.47">emlétűnk</rdg>
                            <rdg wit="#K5a" xml:id="rdg.48">sahajtunk</rdg>
                            <rdg wit="#K6a #K-Ia" xml:id="rdg.49">ohajtunk</rdg>
                            <rdg wit="#K-IIc" xml:id="rdg.50">sohajtyuk</rdg>
                            <rdg wit="#K-III" xml:id="rdg.51">óhajtúnk</rdg>
                            <rdg wit="#K-IIIa" xml:id="rdg.52"> ohajtunk; emlétünk</rdg>
                        </app></l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="9" xml:id="l.9"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Kátainak mérge<note type="critic"
                                    xml:id="note.4">Mint közismert, <persName>Kátay Mihályt<idno
                                            type="ITIdata">Q51647</idno></persName> (†<date
                                        when="1607">1607</date>), <persName>Bocskai<idno
                                            corresp="Bocskai István"/></persName> katolikus
                                    kancellárját a Bocskai halálán elbúsult hajdúk a fejedelem
                                    megmérgezésével vádolták, és felkoncolták. Az eset
                                    legrészletesebb beszámolóját <persName><hi rend="smallcaps"
                                            >Szepsi Lackó Máté</hi></persName> adta.
                                            (<bibl><title>Tűzpróba</title>. 1603–1613. Szerk. <hi
                                            rend="smallcaps">Makkai László</hi>. Bp. [1942] [Erdély
                                        Öröksége III.] 111–113</bibl>.)</note> meg évé
                                fejedet,</lem>
                            <rdg wit="#K1" xml:id="rdg.53"><note type="critic" xml:id="note.5">a
                                    harmadik strófa hiányzik</note></rdg>
                            <rdg wit="#K2" xml:id="rdg.54"><del>Katadnak mérge</del><add type="corr"
                                    >Kátainak a’ mérge</add>; <del>meg éve</del><add type="corr">meg
                                    évé</add></rdg>
                            <rdg wit="#K3" xml:id="rdg.55">Katadnak a’ merge</rdg>
                        </app></l>
                    <l n="10" xml:id="l.10"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Nem száná nemzetét, sem a’ te
                                ügyedet,</lem>
                            <rdg wit="#K4a #K-Ib #K5j" xml:id="rdg.56"> Nemzeted</rdg>
