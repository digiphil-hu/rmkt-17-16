        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 58.</fw>
                <head type="title">JESUS</head>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1"><hi rend="bold"> J</hi>ésus, légy én velem, s-ne meny el
                        én tülem,</l>
                    <l n="2" xml:id="l.2">hogy ha nem távozol sohais mellölem,</l>
                    <l n="3" xml:id="l.3">nincsen, se nem lehet ollyan veszedelem,</l>
                    <l n="4" xml:id="l.4">mely által szivemben lehessen félelem.</l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="5" xml:id="l.5"><hi rend="bold">E</hi>gyedül te benned mert valaki
                        bizik,</l>
                    <l n="6" xml:id="l.6"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">s-maga veszéllyében tüled nem
                                távozik,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.1">veszélyében</rdg>
                        </app></l>
                    <l n="7" xml:id="l.7">à te oltalmadban meg nem csalatkozik,</l>
                    <l n="8" xml:id="l.8"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">segitségedbennis meg nem
                                fogyatkozik.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.2">segécségedbenis</rdg>
                        </app></l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="9" xml:id="l.9"><hi rend="bold">S</hi>zánd meg tehát, kérlek, az én rab
                        feiemet,</l>
                    <l n="10" xml:id="l.10">nyerhessek elötted ohaitot kegyelmet,</l>
                    <l n="11" xml:id="l.11"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">én sok inségimben ne lássak
                                gyötrelmet,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.3">inségemben</rdg>
                        </app></l>
                    <l n="12" xml:id="l.12">s-valaha már egyszer vehessek örömet.</l>
                </lg>
                <lg n="4" xml:id="lg.4">
                    <l n="13" xml:id="l.13"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4"><hi rend="bold">V</hi>ed el immár rólam
                                keminy ostoridat</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.4">kemény</rdg>
                        </app></l>
                    <l n="14" xml:id="l.14"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">s-ellenem fel geriet, méltó
                                haragodat,</lem>
                            <rdg wit="#W1" xml:id="rdg.5">haragodatt</rdg>
                            <rdg wit="#W2" xml:id="rdg.6">haragodott</rdg>
                        </app></l>
                    <l n="15" xml:id="l.15"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">hivságos éltemért ne állyad
                                boszszúdat,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.7">boszúdatt</rdg>
                        </app></l>
                    <l n="16" xml:id="l.16">s-ingyen ió voltodbúl nyuicsad irgalmadat.</l>
                </lg>
                <lg n="5" xml:id="lg.5">
                    <l n="17" xml:id="l.17"><hi rend="bold">S</hi>zentséges nevednek szivbül
                        ohaitása</l>
                    <l n="18" xml:id="l.18">légyen bús szivemnek meg vigasztalása,</l>
                    <l n="19" xml:id="l.19"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">nagy sok nyavolyámnak kivánt
                                orvoslása</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.8">kévánt</rdg>
                        </app></l>
                    <l n="20" xml:id="l.20">s-lelkemnek te benned csendes nyúgovása.</l>
                </lg>
            </div>
