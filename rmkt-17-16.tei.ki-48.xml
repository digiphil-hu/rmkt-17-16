            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 48.</fw>
                <head type="title">NULLA CALAMITAS SOLA</head>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1"><hi rend="bold">N</hi>incs à szerencsének
                                örök adománya,</lem>
                            <rdg wit="#W1" xml:id="rdg.1">adománnya</rdg>
                        </app></l>
                    <l n="2" xml:id="l.2"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">nem soká virágzik szép Zöld
                                    borostyánn<corr>y</corr>a,</lem>
                            <rdg wit="#W1" xml:id="rdg.2">borostánnya</rdg>
                            <rdg wit="#W2" xml:id="rdg.3">borostyánnya</rdg>
                            <rdg wit="#W3" xml:id="rdg.4">borostyánnva</rdg>
                        </app></l>
                    <l n="3" xml:id="l.3"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">elhervasztására ezer találmánnya,</lem>
                            <rdg wit="#W2" xml:id="rdg.5">találmánya</rdg>
                        </app></l>
                    <l n="4" xml:id="l.4"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">s-abban fejét törni soha el-nem
                                únnya.</lem>
                            <rdg wit="#W1" xml:id="rdg.6">tőrnyi</rdg>
                            <rdg wit="#W2" xml:id="rdg.7">tőrnyi; únya</rdg>
                        </app></l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="5" xml:id="l.5"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5"><hi rend="bold">V</hi>alakit ha szintén
                                felemel à pólczra,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.8">póczra</rdg>
                        </app></l>
                    <l n="6" xml:id="l.6"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">szinlett jó kedvébül veszen
                                karjaira,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.9">vészen</rdg>
                        </app></l>
                    <l n="7" xml:id="l.7"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">készit azzal útat feje romlására,</lem>
                            <rdg wit="#W1" xml:id="rdg.10">készitt</rdg>
                            <rdg wit="#W2" xml:id="rdg.11">készétt</rdg>
                        </app></l>
                    <l n="8" xml:id="l.8">nem-is bocsát senkit csendes nyúgovásra.</l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="9" xml:id="l.9"><hi rend="bold">L</hi>átom, s-tapasztalom álnok
                        mesterségét</l>
                    <l n="10" xml:id="l.10">és akkor örömét s-nagy gyönyörüségét,</l>
                    <l n="11" xml:id="l.11">ha szaporithattya embernek inségét,</l>
                    <l n="12" xml:id="l.12">s-nevelheti töbre nagy keserüségét.</l>
                </lg>
                <lg n="4" xml:id="lg.4">
                    <l n="13" xml:id="l.13"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">4. <hi rend="bold">L</hi>e-tapodgya
                                embert, ha kegyetlenkedik,</lem>
                            <rdg wit="#W1" xml:id="rdg.12">kegyettlenkegyik</rdg>
                        </app></l>
                    <l n="14" xml:id="l.14">el-nyomja, s-el-fojtya, s-nagyon dühösködik,</l>
                    <l n="15" xml:id="l.15">ezernyi sok képpen szaporán forgódik,</l>
                    <l n="16" xml:id="l.16"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">szive keservére kedvessen vágyódik.</lem>
                            <rdg wit="#W2" xml:id="rdg.13">keservire </rdg>
                        </app></l>
                </lg>
                <lg n="5" xml:id="lg.5">
                    <l n="17" xml:id="l.17"><hi rend="bold">*A</hi>’ kárt kárral tóldgya,
                        s-búsúlással fóldgya,</l>
                    <l n="18" xml:id="l.18">mellynek mesterségét igen igen tudgya,</l>
                    <l n="19" xml:id="l.19">van is effélére szorgalmatos gondgya,</l>
                    <l n="20" xml:id="l.20">s-illy gondos munkája hiveinek sóldgya.</l>
                </lg>
                <lg n="6" xml:id="lg.6">
                    <l n="21" xml:id="l.21"><hi rend="bold">C</hi>suda változását látom
                        szerencsének,</l>
                    <l n="22" xml:id="l.22"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">változó forgását sorsa kerekének,</lem>
                            <rdg wit="#W2" xml:id="rdg.14">kerekinek</rdg>
                        </app></l>
                    <l n="23" xml:id="l.23">nemjó tehátt hinni hizelkedésének,</l>
                    <l n="24" xml:id="l.24">javain sem méltó örülni embernek.</l>
                </lg>
                <lg n="7" xml:id="lg.7">
                    <l n="25" xml:id="l.25"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11"><hi rend="bold">A</hi>’rnyék javaiban
                                énis részesültem,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.15">jovaiban</rdg>
                        </app></l>
                    <l n="26" xml:id="l.26">kedvébül kedvemre, vólt olly üdö, éltem,</l>
                    <l n="27" xml:id="l.27">hizelkedését-is némellykor érzettem,</l>
                    <l n="28" xml:id="l.28">s-kedvezö vóltában vigadtam, s-örültem.</l>
                </lg>
                <lg n="8" xml:id="lg.8">
                    <l n="29" xml:id="l.29"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12"><hi rend="bold">L</hi>ekaszált szénámis
                                jó rendben vólt néha,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.16">renden</rdg>
                        </app></l>
                    <l n="30" xml:id="l.30"><app xml:id="app.13">
                            <lem wit="#KK" xml:id="lem.13">süvegemet félre tehettem valaha,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.17">férre</rdg>
                        </app></l>
                    <l n="31" xml:id="l.31"><app xml:id="app.14">
                            <lem wit="#KK" xml:id="lem.14">m<corr>i</corr>g el-nem változék, s-nem
                                vala mostoha,</lem>
                            <rdg wit="#W1" xml:id="rdg.18">míg</rdg>
                            <rdg wit="#W2" xml:id="rdg.19">meg; változik</rdg>
                            <rdg wit="#W3" xml:id="rdg.20">még</rdg>
                        </app></l>
                    <l n="32" xml:id="l.32">s-hogy semmisé tégyen, nem gondoltam soha.</l>
                </lg>
                <lg n="9" xml:id="lg.9">
                    <l n="33" xml:id="l.33"><hi rend="bold">A</hi>’lnoksága szerint akarván
                        azomban</l>
                    <l n="34" xml:id="l.34">taszitani engem, s-tapodni à porban,</l>
                    <l n="35" xml:id="l.35">minden úttal móddal feltette magában,</l>
                    <l n="36" xml:id="l.36"><app xml:id="app.15">
                            <lem wit="#KK" xml:id="lem.15">egyszersmind sok veszélyt forditson
                                nyakamban.</lem>
                            <rdg wit="#W1" xml:id="rdg.21">egyszer s-mind sok veszélyt</rdg>
                            <rdg wit="#W2" xml:id="rdg.22">Sok veszélyt egyszersmind</rdg>
                        </app></l>
                </lg>
                <lg n="10" xml:id="lg.10">
                    <l n="37" xml:id="l.37"><app xml:id="app.16">
                            <lem wit="#KK" xml:id="lem.16"><hi rend="bold">M</hi>inden adott javát
                                egyszersmind elkapta,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.23">jovátt</rdg>
                        </app></l>
                    <l n="38" xml:id="l.38">Lakó helyemetis pusztúlásra hozta,</l>
                    <l n="39" xml:id="l.39"><app xml:id="app.17">
                            <lem wit="#KK" xml:id="lem.17">à szép szabadságrúl <corr>engemet</corr>
                                meg foszta,</lem>
                            <rdg wit="#W1" xml:id="rdg.24">engemet szabadtságtúl</rdg>
                            <rdg wit="#W2" xml:id="rdg.25">engemet szabadságtúl</rdg>
                            <rdg wit="#W3" xml:id="rdg.26">en gemet</rdg>
                        </app></l>
                    <l n="40" xml:id="l.40">s-keserves rabságra fejemet jutatta.</l>
                </lg>
                <lg n="11" xml:id="lg.11">
                    <l n="41" xml:id="l.41"><hi rend="bold">I</hi>gy sem telék kedve
                        kegyetlenségének,</l>
                    <l n="42" xml:id="l.42">meg vala már veszte az én értékemnek,</l>
                    <l n="43" xml:id="l.43">sanyarú rabsága nyomorúlt fejemnek,</l>
                    <l n="44" xml:id="l.44">s-hasonló esete János ráb öcsémnek.<note type="critic"
                            xml:id="note.1">L. a <ref target="rmkt-17-16.tei.ki-21">21. sz.
                                vers</ref> jegyzeteit.</note></l>
                </lg>
                <lg n="12" xml:id="lg.12">
                    <l n="45" xml:id="l.45"><app xml:id="app.18">
                            <lem wit="#KK" xml:id="lem.18"><hi rend="bold">T</hi>udta, de azt vélem,
                                javát nem ohajtom,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.27">jovátt</rdg>
                        </app></l>
                    <l n="46" xml:id="l.46">változó mivóltán elmémet nyugtatom,</l>
                    <l n="47" xml:id="l.47">forgandóságával magamot biztatom,</l>
                    <l n="48" xml:id="l.48"><app xml:id="app.19">
                            <lem wit="#KK" xml:id="lem.19">s-rab fejem reményét Istenben
                                fent-tartom.</lem>
                            <rdg wit="#W1" xml:id="rdg.28">rab<note type="critic" xml:id="note.2"
                                        ><hi rend="italic">s</hi> hiányzik</note>; fen tartom</rdg>
                            <rdg wit="#W2" xml:id="rdg.29">fen tartom</rdg>
                        </app></l>
                </lg>
                <lg n="13" xml:id="lg.13">
                    <l n="49" xml:id="l.49"><hi rend="bold">A</hi>hozvalóképpest hogy
                        fel-háboritsa</l>
                    <l n="50" xml:id="l.50">szivem csendességét, fel-bontsa, s-elrontsa,</l>
                    <l n="51" xml:id="l.51">bú, bánat árjával éppen el-boritsa,</l>
                    <l n="52" xml:id="l.52">s-minden részeiben kegyetlenül fojtsa,</l>
                </lg>
                <lg n="14" xml:id="lg.14">
                    <l n="53" xml:id="l.53"><hi rend="bold">*S</hi>zerelmes Anyámnak és Imre
                        öcsémnek</l>
                    <l n="54" xml:id="l.54">halálával ejté sebeit szivemnek,</l>
                    <l n="55" xml:id="l.55">s-fájdalmát szerzette méltó keservének,</l>
                    <l n="56" xml:id="l.56">tett mellyel engemet már hólt-elevennek.</l>
                </lg>
                <lg n="15" xml:id="lg.15">
                    <l n="57" xml:id="l.57"><hi rend="bold">S</hi>zámlálnom okait újab
                        keserüség,</l>
                    <l n="58" xml:id="l.58">söt méggondolnom-is emésztö epetség,</l>
                    <l n="59" xml:id="l.59">de nem éri öket è világi inség,</l>
                    <l n="60" xml:id="l.60"><app xml:id="app.20">
                            <lem wit="#KK" xml:id="lem.20">legyen immár övék Mennyei dücsöség.</lem>
                            <rdg wit="#W1" xml:id="rdg.30">légyen</rdg>
                        </app></l>
                </lg>
                <lg n="16" xml:id="lg.16">
                    <l n="61" xml:id="l.61"><app xml:id="app.21">
                            <lem wit="#KK" xml:id="lem.21"><hi rend="bold">O</hi>h Fölséges Isten,
                                végybé irgalmadban,</lem>
                            <rdg wit="#W1" xml:id="rdg.31">Főlséges</rdg>
                            <rdg wit="#W2" xml:id="rdg.32">Felséges</rdg>
                        </app></l>
                    <l n="62" xml:id="l.62">árvájúl maradtam, vigasztalymeg búmban,</l>
                    <l n="63" xml:id="l.63">fogd nékem pártomat én árvaságomban,</l>
                    <l n="64" xml:id="l.64">s-te viseld gondomat rabságos sorsomban.</l>
                </lg>
                <lg n="17" xml:id="lg.17">
                    <l n="65" xml:id="l.65"><hi rend="bold">L</hi>átogatásidnak szapora mivólta</l>
                    <l n="66" xml:id="l.66"><app xml:id="app.22">
                            <lem wit="#KK" xml:id="lem.22">keserült szivemet, meg-vallom,
                                áltjárta,</lem>
                            <rdg wit="#W1" xml:id="rdg.33">át járta</rdg>
                            <rdg wit="#W2" xml:id="rdg.34">átjárta</rdg>
                        </app></l>
                    <l n="67" xml:id="l.67">s-à sok keserüség mind éppen elfogta,</l>
                    <l n="68" xml:id="l.68">türhetetlenségre de soha sem hozta,</l>
                </lg>
                <lg n="18" xml:id="lg.18">
                    <l n="69" xml:id="l.69"><hi rend="bold">*A</hi> mellyért örökké Fölségedet
                        áldom,</l>
                    <l n="70" xml:id="l.70"><app xml:id="app.23">
                            <lem wit="#KK" xml:id="lem.23">lelkemet ajánlva örökké imádom,</lem>
                            <rdg wit="#W1" xml:id="rdg.35">ajanlva</rdg>
                            <rdg wit="#W2" xml:id="rdg.36">ajánlom</rdg>
                        </app></l>
                    <l n="71" xml:id="l.71">szivemet è mellett éppen néked adom,</l>
                    <l n="72" xml:id="l.72"><app xml:id="app.24">
                            <lem wit="#KK" xml:id="lem.24">törödött mivóltát meg nem veted,
                                tudom.</lem>
                            <rdg wit="#W1" xml:id="rdg.37">tőrődőtt</rdg>
                            <rdg wit="#W2" xml:id="rdg.38">tőrődett</rdg>
                        </app></l>
                </lg>
