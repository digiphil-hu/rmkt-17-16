            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 59.</fw>
                <head type="title">MÁRIA</head>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1"><hi rend="bold">M</hi>ivel hogy, Mária, te vagy meg
                        váltonknak,</l>
                    <l n="2" xml:id="l.2"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">szerelmes, szent Annya à Jésus
                                Christusnak,</lem>
                            <rdg wit="#W1" xml:id="rdg.1">Jesu</rdg>
                            <rdg wit="#W2" xml:id="rdg.2">Jesus</rdg>
                        </app></l>
                    <l n="3" xml:id="l.3">te vagy szószollóia bünös Fiaidnak</l>
                    <l n="4" xml:id="l.4">s-kegyes pártfogóia minden nyomorultnak,</l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="5" xml:id="l.5"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2"><hi rend="bold">A</hi>hoz való képest,
                                imé, mostanában</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.3">ime</rdg>
                        </app></l>
                    <l n="6" xml:id="l.6">búsúlással tellyes nyomoruságomban</l>
                    <l n="7" xml:id="l.7">aiánlom magamot à te oltalmadban,</l>
                    <l n="8" xml:id="l.8">könyörögi érettem tehát Menyországban.</l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="9" xml:id="l.9"><hi rend="bold">R</hi>égenten valamint à te kérésedre,</l>
                    <l n="10" xml:id="l.10">szerelmes, szent Fiad s-esedezésedre</l>
                    <l n="11" xml:id="l.11"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">à vizet forditá bornak az izire,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.4">fordittá</rdg>
                        </app></l>
                    <l n="12" xml:id="l.12">s-hamar változtatá ió édességére,</l>
                </lg>
                <lg n="4" xml:id="lg.4">
                    <l n="13" xml:id="l.13"><hi rend="bold">I</hi>gy mostannis vizét hullott
                        könyveimnek</l>
                    <l n="14" xml:id="l.14">fordicsa izire szivem örömének</l>
                    <l n="15" xml:id="l.15">és édességére keserült szivemnek</l>
                    <l n="16" xml:id="l.16">s-kévánt ió kedvére az én rab feiemnek,</l>
                </lg>
                <lg n="5" xml:id="lg.5">
                    <l n="17" xml:id="l.17"><hi rend="bold">A</hi> melly által terhét súlyos
                        rabságomnak,</l>
                    <l n="18" xml:id="l.18"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">viselhessem könnyen súlyátis á búnak</lem>
                            <rdg wit="#W1" xml:id="rdg.5">kőnnyen sullyátis</rdg>
                            <rdg wit="#W2" xml:id="rdg.6">kőnnyőn sullyattis</rdg>
                        </app></l>
                    <l n="19" xml:id="l.19">s-régtül fogvást való nyomoruságomnak,</l>
                    <l n="20" xml:id="l.20">s-adgyak fris, jó kedvel hálát szent Fiadnak.</l>
                </lg>
            </div>
