    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 139.</fw>
                <head type="title">MAS.</head>
                <head type="notation"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">Notaja: A na zemi budiz Lidem</lem>
                        <rdg wit="#W1" xml:id="rdg.1"><del>Anazemi</del><add
                                corresp="Petrőczy Kata Szidónia">A na zemi</add></rdg>
                    </app></head>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1">Oh lelkünk vilagossága,</l>
                    <l n="2" xml:id="l.2">Juhaidnak jo pásztora,</l>
                    <l n="3" xml:id="l.3">tekincz kegyes szemmel ala,</l>
                    <l n="4" xml:id="l.4">jusson hozád Néped szavá,</l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="5" xml:id="l.5">Melyet te hozzád bótsátunk,</l>
                    <l n="6" xml:id="l.6">és könyves szemmel kiáltunk:</l>
                    <l n="7" xml:id="l.7">jöj el, mencz meg, segétségünk,</l>
                    <l n="8" xml:id="l.8">látod, mely szörnyü Inségünk!</l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="9" xml:id="l.9"> Kit bününkért érdemlettünk,</l>
                    <l n="10" xml:id="l.10">az te haragodban estünk,</l>
                    <l n="11" xml:id="l.11">idegen nemzet van rajtunk,</l>
                    <l n="12" xml:id="l.12">jai, igen sanyargattatunk!</l>
                </lg>
                <lg n="4" xml:id="lg.4">
                    <l n="13" xml:id="l.13">Ránk jöve, mint az Sidókra,</l>
                    <l n="14" xml:id="l.14">szörnyü Egiptomi íga,</l>
                    <l n="15" xml:id="l.15">nénts életünknek óltalma,</l>
                    <l n="16" xml:id="l.16">mert Ingerlettünk haragra.</l>
                </lg>
                <lg n="5" xml:id="lg.5">
                    <l n="17" xml:id="l.17">Pusztityák édes hazánkat,</l>
                    <l n="18" xml:id="l.18">el vonnják mi javainkat,</l>
                    <l n="19" xml:id="l.19"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">nevetvén mi <corr>siralminkat</corr></lem>
                            <rdg wit="#W1" xml:id="rdg.2">sziralminkat</rdg>
                        </app></l>
                    <l n="20" xml:id="l.20">czikorgatyák ránk fogokat.</l>
                </lg>
                <lg n="6" xml:id="lg.6">
                    <l n="21" xml:id="l.21">Még lelkünkbe is gyötrenek,</l>
                    <l n="22" xml:id="l.22">az igaz hitért gyülölnek,</l>
                    <l n="23" xml:id="l.23">egy helybül másra üldoznek,</l>
                    <l n="24" xml:id="l.24">Templomidbul ki üztenek.</l>
                </lg>
                <lg n="7" xml:id="lg.7">
                    <l n="25" xml:id="l.25">Ez kis helyre szorult Néped</l>
                    <l n="26" xml:id="l.26">hogy tisztán tisztellyen téged,</l>
                    <l n="27" xml:id="l.27">de ha nem óltalmaz kezed,</l>
                    <l n="28" xml:id="l.28">s meg nem esik rajtunk szived?</l>
                </lg>
                <lg n="8" xml:id="lg.8">
                    <lg n="9" xml:id="lg.9">
                        <l n="29" xml:id="l.29">Föl tötték, hogy háborgatnak,</l>
                        <l n="30" xml:id="l.30">és hitünkbe meg nem hadnak,</l>
                        <l n="31" xml:id="l.31">fegyverrel arra hajtanak,</l>
                        <l n="32" xml:id="l.32">az mit magok gondóltanak,</l>
                    </lg>
                </lg>
                <lg n="10" xml:id="lg.10">
                    <l n="33" xml:id="l.33">Avagy bujdosókka tesznek,</l>
                    <l n="34" xml:id="l.34">az kik allunk ö ellenek,</l>
                    <l n="35" xml:id="l.35">minket koldulni ki üznek</l>
                    <l n="36" xml:id="l.36">hazánkbul, avagy meg őlnek.</l>
                </lg>
                <lg n="11" xml:id="lg.11">
                    <l n="37" xml:id="l.37">Szent kezedbe vagyon szivek,</l>
                    <l n="38" xml:id="l.38"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">tudod, mi Igyekezetek,</lem>
                            <rdg wit="#W1" xml:id="rdg.3"><del corresp="Petrőczy Kata Szidónia"
                                    instant="true">igyekezeteket</del><add
                                    corresp="Petrőczy Kata Szidónia" type="corr"
                                >Igyekezetek</add></rdg>
                        </app></l>
                    <l n="39" xml:id="l.39">romlásunkra mit szerzettek,</l>
                    <l n="40" xml:id="l.40">és Czéllyokat, kit fel töttek.</l>
                </lg>
                <lg n="12" xml:id="lg.12">
                    <l n="41" xml:id="l.41">Ted semmivé tanáczokat,</l>
                    <l n="42" xml:id="l.42">verd az földhöz hatalmokat,</l>
                    <l n="43" xml:id="l.43">czufold meg találmányokat,</l>
                    <l n="44" xml:id="l.44">szánd meg az mi siralminkat!</l>
                </lg>
                <lg n="13" xml:id="lg.13">
                    <lg n="14" xml:id="lg.14">
                        <l n="45" xml:id="l.45">Alicz helybe szent nevedért,</l>
                        <l n="46" xml:id="l.46">tiszteletedet fiadért,</l>
                        <l n="47" xml:id="l.47">tarcz meg az te jo vóltodért,</l>
                        <l n="48" xml:id="l.48">szánj meg fiad érdemiért!</l>
                    </lg>
                </lg>
                <lg n="15" xml:id="lg.15">
                    <l n="49" xml:id="l.49">Evangeliomod kérünk,</l>
                    <l n="50" xml:id="l.50">hogy Predikáltassék nékünk,</l>
                    <l n="51" xml:id="l.51">tisztán meg maradván köztünk</l>
                    <l n="52" xml:id="l.52">viragozzék hittel szivünk.</l>
                </lg>
                <lg n="16" xml:id="lg.16">
                    <l n="53" xml:id="l.53">Hogy kisdedink is láthassák,</l>
                    <l n="54" xml:id="l.54">mi az lelki világosság,</l>
                    <l n="55" xml:id="l.55">igazán meg tanulhassák,</l>
                    <l n="56" xml:id="l.56">és szivekbe meg tarthassák.</l>
                </lg>
                <lg n="17" xml:id="lg.17">
                    <l n="57" xml:id="l.57">Te szent igidet szeressék,</l>
                    <l n="58" xml:id="l.58">az mit hattál, azt meg érczék</l>
                    <l n="59" xml:id="l.59">és tiszta szivel kövessék,</l>
                    <l n="60" xml:id="l.60">szent nevedet diczöiczék.</l>
                </lg>
                <lg n="18" xml:id="lg.18">
                    <l n="61" xml:id="l.61">Hóltok után peníg menjbe</l>
                    <l n="62" xml:id="l.62">agyad, hivek seregébe</l>
                    <l n="63" xml:id="l.63">velünk egyöt nagy örömbe</l>
                    <l n="64" xml:id="l.64"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">diczirjenek, Uram, menjbe.</lem>
                            <rdg wit="#W1" xml:id="rdg.4"><del corresp="Petrőczy Kata Szidónia"
                                    >uram</del><add corresp="Petrőczy Kata Szidónia" type="corr"
                                    >Uram</add></rdg>
                        </app></l>
                </lg>
            </div>
        </body>
