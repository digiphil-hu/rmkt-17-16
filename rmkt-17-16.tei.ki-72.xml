    <text>
        <body>
            <head type="title">SOK FÉ<hi rend="bold">L</hi>E KERESZTE<hi rend="bold"
                    >L</hi><milestone unit="p"/>E<hi rend="bold">L</hi>-KESERE<hi rend="bold"
                >D</hi>ET E<hi rend="bold">M</hi>BERNEK <milestone unit="p"/>K<hi rend="bold"
                    >I</hi>-KOHO<hi rend="bold">L</hi>T <hi rend="bold">V</hi>ERSE</head>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 72.</fw>
                <head type="title">A’ KEGYES OLVASÓHOZ</head>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1">Három esztendönek és két holnapoknak</l>
                    <l n="2" xml:id="l.2">El forgása után hoszas rabságomnak,</l>
                    <l n="3" xml:id="l.3">Isten adván végét nyomorgatásomnak,</l>
                    <l n="4" xml:id="l.4">Örültem, vigadtam szabadulásomnak.</l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="5" xml:id="l.5">Gondoltam, hazámnak kivánt csendességét,</l>
                    <l n="6" xml:id="l.6">Házamnál élhetem kedvelt békességét,</l>
                    <l n="7" xml:id="l.7">Kiki Királlyához meg tartván hivségét,</l>
                    <l n="8" xml:id="l.8">Már többé nem látom kurucz ellenségét.</l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="9" xml:id="l.9">De megint támadván veszéllye hazámnak,</l>
                    <l n="10" xml:id="l.10">Kurucz ellensége mindenütt házamnak,</l>
                    <l n="11" xml:id="l.11">Felkent Királyomnak s-kegyelmes-Uramnak</l>
                    <l n="12" xml:id="l.12">Táborára menni kelletvén magamnak,</l>
                </lg>
                <lg n="4" xml:id="lg.4">
                    <l n="13" xml:id="l.13">Hól együtt, hól másut fáradván jártomban,</l>
                    <l n="14" xml:id="l.14">Buda viz várasát sokáig laktomban,</l>
                    <l n="15" xml:id="l.15">Hazámnak romlásán lévén bánatomban,</l>
                    <l n="16" xml:id="l.16">Szerzém ez verseket henyélö voltomban.</l>
                </lg>
            </div>
        </body>
