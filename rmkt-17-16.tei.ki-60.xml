    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 60.</fw>
                <head type="title"><hi rend="bold">DÜC</hi>SÖSSÉGES SZENT <hi rend="bold"
                        >I</hi>ST<hi rend="bold">V</hi>ÁN E<hi rend="bold">L</hi>SÖ <hi rend="bold"
                        >M</hi>ÁRT<hi rend="bold">Y</hi>R NAG<hi rend="bold">Y</hi> BÉKESSÉGES T<hi
                        rend="bold">Ü</hi>RÉSÉNEK N<hi rend="bold">Y</hi>ERTÉRE, KÖN<hi rend="bold"
                        >Y</hi>ÖRGÉSÉT KÉR<hi rend="bold">V</hi>E <hi rend="bold">I</hi>RT <hi
                        rend="bold">V</hi>ERSEK</head>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1">Szentséges szent István, világon éltedben</l>
                    <l n="2" xml:id="l.2">Kövekkel verének téged agyban, föben,</l>
                    <l n="3" xml:id="l.3">s-à Christus Mártyra te voltál elsöben,</l>
                    <l n="4" xml:id="l.4">tégedis köszöntlek feltet verseimben.</l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="5" xml:id="l.5">Te kövezöidért Istent könyörögtél,</l>
                    <l n="6" xml:id="l.6">s Isten szerelméért békével szenvedtél,</l>
                    <l n="7" xml:id="l.7">türö szenvedésre zászlótis emeltél,</l>
                    <l n="8" xml:id="l.8">mely által magadnak Menyországot nyertél.</l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="9" xml:id="l.9">Aszent keresztségben nevedet fel vettem,</l>
                    <l n="10" xml:id="l.10">és miúlta immár é világot éltem,</l>
                    <l n="11" xml:id="l.11">zápor, kö essökben elégszer kerültem,</l>
                    <l n="12" xml:id="l.12">sött ugy teczik, sokszor megis kövesztettem.</l>
                </lg>
                <lg n="4" xml:id="lg.4">
                    <l n="13" xml:id="l.13">Nevedet viselve téged kérlek azért,</l>
                    <l n="14" xml:id="l.14">szenvedgyek békével énis az Istenért,</l>
                    <l n="15" xml:id="l.15">és ö szent Fölségét imádgyam azokért,</l>
                    <l n="16" xml:id="l.16">meg kövezö kezek kiknek feiemre ért.</l>
                </lg>
                <lg n="5" xml:id="lg.5">
                    <l n="17" xml:id="l.17">Zászlod alat élve kövessem példádat,</l>
                    <l n="18" xml:id="l.18">el se hadgyam soha fel emelt zászlodat,<note
                            type="critic" xml:id="note.1">17–18 Vö. <persName>Balassi Bálint<idno
                                    type="ITIdata">Q2101</idno></persName><title>Hymnus
                                secundus</title>ának utosó sorával: „Kik zászlód alatt járnak.”
                                (<bibl>I. m. 170.</bibl>)</note></l>
                    <l n="19" xml:id="l.19">türö szenvedéssel szolgállyam uradat,</l>
                    <l n="20" xml:id="l.20">s-à te urad által nyeriem koronádat.</l>
                </lg>
            </div>
        </body>
