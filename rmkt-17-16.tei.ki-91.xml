            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 91.</fw>
                <head type="title">DEVS VBIQVE CONSERVATOR PROTECTOR MEVS</head>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Szent Péter vas láncon sinlet
                                tömlöczében,</lem>
                            <rdg wit="#W1" xml:id="rdg.1">sínlett</rdg>
                        </app></l>
                    <l n="2" xml:id="l.2"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Vettetet Dániel oroszlány vermében,</lem>
                            <rdg wit="#W2" xml:id="rdg.2">Oroszlán</rdg>
                        </app></l>
                    <l n="3" xml:id="l.3">Az három iffijú égő kemenczében,</l>
                    <l n="4" xml:id="l.4"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">És Jónás Propheta tenger örvényében.</lem>
                            <rdg wit="#W2" xml:id="rdg.3"><note type="critic" xml:id="note.1">a 2–4
                                    sorok 4–2–3 sorrendben</note></rdg>
                            <rdg wit="#W3" xml:id="rdg.4"><note type="critic" xml:id="note.2">a 2–4
                                    sorok 2–4–3 sorrendben; eredeti sorrendjük, mint az I-ben,
                                    bizonyára a 2. strófa sorainak sorrendjével egyezett
                                meg</note></rdg>
                        </app></l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="5" xml:id="l.5"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Megszabadult Péter maga tömlöczébül,</lem>
                            <rdg wit="#W1" xml:id="rdg.5">Megszabadúlt</rdg>
                        </app></l>
                    <l n="6" xml:id="l.6">Dániel Próféta Oroszlány vermébül,</l>
                    <l n="7" xml:id="l.7"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Az három iffiú égő kemenczébül,</lem>
                            <rdg wit="#W1" xml:id="rdg.6">kemenczébül</rdg>
                        </app></l>
                    <l n="8" xml:id="l.8"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Jónás Próféta is tenger örvényébül.</lem>
                            <rdg wit="#W2" xml:id="rdg.7">Iónás proféta tenger</rdg>
                        </app></l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="9" xml:id="l.9"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Engemet is Isten Munkács kővárábul,</lem>
                            <rdg wit="#W1" xml:id="rdg.8">kővárábúl</rdg>
                        </app></l>
                    <l n="10" xml:id="l.10"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Lábaimnak nehéz, felvert, nagy
                                vasábul,</lem>
                            <rdg wit="#W1" xml:id="rdg.9">vasábúl</rdg>
                        </app></l>
                    <l n="11" xml:id="l.11"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Hoszszú rabságomnak nyomorúságábul</lem>
                            <rdg wit="#W1" xml:id="rdg.10">nyomorúságábúl</rdg>
                        </app></l>
                    <l n="12" xml:id="l.12"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Szabaditot, mintegy cethalnak
                                gyomrábul.</lem>
                            <rdg wit="#W1" xml:id="rdg.11">Szabadított; gyomrábúl</rdg>
                        </app></l>
                </lg>
                <lg n="4" xml:id="lg.4">
                    <l n="13" xml:id="l.13">Mellyért adok hálát az élő Istennek,</l>
                    <l n="14" xml:id="l.14"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">Igaz, tiszta szivbül eö szent
                                felségének,</lem>
                            <rdg wit="#W1" xml:id="rdg.12">szívbűl</rdg>
                        </app></l>
                    <l n="15" xml:id="l.15">Hozzám megmutatot, ingyen kegyelmének,</l>
                    <l n="16" xml:id="l.16"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12">Áldás és dicsősség legyen szent
                                nevének.</lem>
                            <rdg wit="#W1" xml:id="rdg.13">dücsősség légyen</rdg>
                            <rdg wit="#W2" xml:id="rdg.14">Dütsőség légyen</rdg>
                        </app></l>
                </lg>
                <lg n="5" xml:id="lg.5">
                    <l n="17" xml:id="l.17"><app xml:id="app.13">
                            <lem wit="#KK" xml:id="lem.13">Volt, van is reményem Isten
                                irgalmában</lem>
                            <rdg wit="#W1" xml:id="rdg.15">Vólt</rdg>
                        </app></l>
                    <l n="18" xml:id="l.18"><app xml:id="app.14">
                            <lem wit="#KK" xml:id="lem.14">Mindenüt, mindenkor mostoha
                                sorsomban,</lem>
                            <rdg wit="#W1" xml:id="rdg.16">s mindenkor</rdg>
                        </app></l>
                    <l n="19" xml:id="l.19"><app xml:id="app.15">
                            <lem wit="#KK" xml:id="lem.15">Leszen gondviselőm minden
                                nyavalyámban,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.17">Lészen</rdg>
                        </app></l>
                    <l n="20" xml:id="l.20"><app xml:id="app.16">
                            <lem wit="#KK" xml:id="lem.16">Megtart halálomig kegyes
                                oltalmában.</lem>
                            <rdg wit="#W2" xml:id="rdg.18">óltalmában</rdg>
                        </app></l>
                </lg>
                <lg n="6" xml:id="lg.6">
                    <l n="21" xml:id="l.21">Életemnek pedig elfolyván órája,</l>
                    <l n="22" xml:id="l.22">Engemet emésztő testem nyavalyája,</l>
                    <l n="23" xml:id="l.23">Hogy megszünjék továb fejem galibája,</l>
                    <l n="24" xml:id="l.24"><app xml:id="app.17">
                            <lem wit="#KK" xml:id="lem.17">Irgalma Istennek leszen nyugtatója.</lem>
                            <rdg wit="#W1" xml:id="rdg.19">lészen</rdg>
                            <rdg wit="#W2" xml:id="rdg.20">Irgalmas; lészen</rdg>
                        </app></l>
                </lg>
            </div>
