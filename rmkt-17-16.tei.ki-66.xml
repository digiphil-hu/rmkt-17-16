    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 66.</fw>
                <head type="title">T<hi rend="bold">Ú</hi>N<hi rend="bold">Y</hi>A, R<hi rend="bold"
                        >Ú</hi>T HE<hi rend="bold">V</hi>ERÉSSE<hi rend="bold">L</hi><hi rend="bold"
                        >L</hi>E <hi rend="bold">I</hi>RT <hi rend="bold">V</hi>ERSEKNEK E<hi
                        rend="bold">L</hi>SÖ RÉSZE <hi rend="bold">V</hi>TÁN KÖ<hi rend="bold"
                        >V</hi>ETKEZ<hi rend="bold">I</hi>K <hi rend="bold">M</hi>ÁSO<hi rend="bold"
                        >DI</hi>K RÉSZE</head>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1">HEnyélö munkámban szúnnyadva s-heverve,</l>
                    <l n="2" xml:id="l.2">egyik óldalamrúl másikára fekve,</l>
                    <l n="3" xml:id="l.3">látott álmomnakis más részéhez érve</l>
                    <l n="4" xml:id="l.4">mintegy meg frissültem, à restséget üzve.</l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="5" xml:id="l.5">És midön nagy frissen, úntalan henyélnék,</l>
                    <l n="6" xml:id="l.6">úgy tetczik álmomban, mintha könnyebülnék,</l>
                    <l n="7" xml:id="l.7">zöldellö sik mezön az midön Sétálnék,</l>
                    <l n="8" xml:id="l.8">egy ember véletlen én elömben tünék.</l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="9" xml:id="l.9">Elnéztem én annak aranyos köntösét,</l>
                    <l n="10" xml:id="l.10">igen fris jó kedvel sétáló lépését,</l>
                    <l n="11" xml:id="l.11">vidám tekéntetit s-mosolygó nézését,</l>
                    <l n="12" xml:id="l.12">mindenekben rendes maga viselését.</l>
                </lg>
                <lg n="4" xml:id="lg.4">
                    <l n="13" xml:id="l.13">De én is azalat akadék szemében,</l>
                    <l n="14" xml:id="l.14">melyre való nézve siettem elêiben,</l>
                    <l n="15" xml:id="l.15">miképpen köszöntsem, forgattam elmémben,</l>
                    <l n="16" xml:id="l.16">s-arrúl gondolkodtam feléje mentemben.</l>
                </lg>
                <lg n="5" xml:id="lg.5">
                    <l n="17" xml:id="l.17">El jutván hozzája, térdemet hajtottam,</l>
                    <l n="18" xml:id="l.18">s-térdem hajlásával néki kezét fogtam,</l>
                    <l n="19" xml:id="l.19">sok szerencsés jókat szivessen kévántam,</l>
                    <l n="20" xml:id="l.20">engem szólgájának ösmérjen, mondottam.</l>
                </lg>
                <lg n="6" xml:id="lg.6">
                    <l n="21" xml:id="l.21">Tett köszöntésemet nagy kedvessen vette,</l>
                    <l n="22" xml:id="l.22">hasonló sok jókkal engemis köszönte,</l>
                    <l n="23" xml:id="l.23">magam ajánlását nagyra böcsüllötte,</l>
                    <l n="24" xml:id="l.24">s-hogy elêiben mentem, aztis kedvellette.</l>
                </lg>
                <lg n="7" xml:id="lg.7">
                    <l n="25" xml:id="l.25">Kezdett sétálásom nem szakadván félben</l>
                    <l n="26" xml:id="l.26">véle beszélgetvén à sétálás közben,</l>
                    <l n="27" xml:id="l.27">kötött bokrétáját nyujtotta kezemben,</l>
                    <l n="28" xml:id="l.28">s-mi jóban fáradok, azt vette kérdésben.</l>
                </lg>
                <lg n="8" xml:id="lg.8">
                    <l n="29" xml:id="l.29">Az én fáradtságom szivem búsúlása,</l>
                    <l n="30" xml:id="l.30">meg mondám nékie, rabság fejem sorsa,</l>
                    <l n="31" xml:id="l.31">forog most elmémen jónak nyomozása,</l>
                    <l n="32" xml:id="l.32">mivólta hól léte s-annak visgálása.</l>
                </lg>
                <lg n="9" xml:id="lg.9">
                    <l n="33" xml:id="l.33">Hól létét, mivóltát ha nyilván tudhatnám,</l>
                    <l n="34" xml:id="l.34">hiszem az jó Istent, addig imádhatnám,</l>
                    <l n="35" xml:id="l.35">valami kis részét talám nyomozhatnám,</l>
                    <l n="36" xml:id="l.36">szivem csendességét felis találhatnám.</l>
                </lg>
                <lg n="10" xml:id="lg.10">
                    <l n="37" xml:id="l.37">Jónak tartom vala dücsöségre vágyni,</l>
                    <l n="38" xml:id="l.38">hir név keresésel böcsületet nyerni,</l>
                    <l n="39" xml:id="l.39">haza óltalmában embernek fáradni,</l>
                    <l n="40" xml:id="l.40">s-fel-kent királlyának hivséggel szolgálni.</l>
                </lg>
                <lg n="11" xml:id="lg.11">
                    <l n="41" xml:id="l.41">Látom, de illy jóknak ezer akadállya,</l>
                    <l n="42" xml:id="l.42">mert az dücsöséget sok veszély talállya,</l>
                    <l n="43" xml:id="l.43">szaporán inallya, s-nyomában sarkallya,</l>
                    <l n="44" xml:id="l.44">tündöklö napnakis meg vagyon homállya.</l>
                </lg>
                <lg n="12" xml:id="lg.12">
                    <l n="45" xml:id="l.45">Rögös, kemény úttya van az dücsösségnek,</l>
                    <l n="46" xml:id="l.46">sikamós, darabos úttya ösvényének,</l>
                    <l n="47" xml:id="l.47">nagy kemény hágója magos tetejének,</l>
                    <l n="48" xml:id="l.48">nincsen csendességek, kik oda sietnek.</l>
                </lg>
                <lg n="13" xml:id="lg.13">
                    <l n="49" xml:id="l.49">Melyrül bölcs szóllását kezdettem halgatni,</l>
                    <l n="50" xml:id="l.50">nagy okos beszédén nagyon álmélkodni,</l>
                    <l n="51" xml:id="l.51">s-hogy el-ne felejcsem, akartam felirni,</l>
                    <l n="52" xml:id="l.52">sok szép discursussit papirosra tenni.</l>
                </lg>
                <lg n="14" xml:id="lg.14">
                    <l n="53" xml:id="l.53">Hát nincs papirosom, azt mondgyák, irásom</l>
                    <l n="54" xml:id="l.54">elég vala eddig, szünnyék firkálásom,</l>
                    <l n="55" xml:id="l.55">nem lehet már tóváb azzal mulatásom,</l>
                    <l n="56" xml:id="l.56">melyrül meg ujobban lén nagy búsúlásom.</l>
                </lg>
                <lg n="15" xml:id="lg.15">
                    <l n="57" xml:id="l.57">A’ búsúlás hoza méllyeb alúvásra,</l>
                    <l n="58" xml:id="l.58">s indita egyszersmind szives óhajtásra,</l>
                    <l n="59" xml:id="l.59">mondám, én Istenem, jútas szabadtságra,</l>
                    <l n="60" xml:id="l.60">sok boszszú s-bánatrúl öröm vigasságra.</l>
                </lg>
                <lg n="16" xml:id="lg.16">
                    <l n="61" xml:id="l.61">Azon szent órában hallék ólly szózatott:</l>
                    <l n="62" xml:id="l.62">buzgó könnyörgésed egekben fel-hatott,</l>
                    <l n="63" xml:id="l.63">az Fölséges Isten téged meg halgatott,</l>
                    <l n="64" xml:id="l.64">örüly, vigadgy, tapsoly, Isten szabaditott.</l>
                </lg>
                <lg n="17" xml:id="lg.17">
                    <l n="65" xml:id="l.65">Enyészék az szózat, s-vagyon tilalomban,</l>
                    <l n="66" xml:id="l.66">hogy immár ne szóllyak többet mostanában,</l>
                    <l n="67" xml:id="l.67">ezzel mély álmombúl serkentem valóban,</l>
                    <l n="68" xml:id="l.68">Isten szabaditott, s-juték szabadságban.</l>
                </lg>
                <lg n="18" xml:id="lg.18">
                    <l n="69" xml:id="l.69">Adta Isten végét hoszszú rabságomnak</l>
                    <l n="70" xml:id="l.70">három esztendönek, két egész holnapnak</l>
                    <l n="71" xml:id="l.71">el forgása után; Fölséges Uramnak</l>
                    <l n="72" xml:id="l.72">juték táborára, felkent királyomnak,</l>
                </lg>
                <lg n="19" xml:id="lg.19">
                    <l n="73" xml:id="l.73">Az hól vagyon immár inségemnek vége,</l>
                    <l n="74" xml:id="l.74">szivemet epesztö bánatimnak vége,</l>
                    <l n="75" xml:id="l.75">Sok szenvedésimnek reménlet jó vége,</l>
                    <l n="76" xml:id="l.76">itten pedig vagyon verseimnek vége.</l>
                </lg>
            </div>
        </body>
