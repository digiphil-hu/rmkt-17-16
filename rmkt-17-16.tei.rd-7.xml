    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 7.</fw>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Betlenböl Kirallyá emelkedett Gábor,<note
                                    type="critic" xml:id="note.1"><persName>Bethlent<idno
                                            corresp="Bethlen Gábor" type="ITIdata"
                                        >Q41495</idno></persName> a <placeName>besztercebányai<idno
                                            corresp="Besztercebánya"/></placeName> országgyűlés
                                        <date when="1620-08-25">1620. aug. 25-én</date> királlyá
                                    választotta.</note></lem>
                            <rdg wit="#NASZ" xml:id="rdg.1">Királlyá érdemmel lött </rdg>
                            <rdg wit="#K4a" xml:id="rdg.2">Királlyá Erdemmel lőtt</rdg>
                            <rdg wit="#K4b" xml:id="rdg.3">Királlyá érdemmel lett</rdg>
                            <rdg wit="#K10j" xml:id="rdg.4">Királyá érdemmel lőtt</rdg>
                            <rdg wit="#K5a" xml:id="rdg.5">Királlya érdemmel lett</rdg>
                            <rdg wit="#K6a" xml:id="rdg.6">Királyá erdemmel lőtt</rdg>
                            <rdg wit="#K-I" xml:id="rdg.7">Királlyá érdemmel lött </rdg>
                            <rdg wit="#K-Ia" xml:id="rdg.8">királjá érdemmel lőtt</rdg>
                            <rdg wit="#K-Ib" xml:id="rdg.9">Királlya érdemmel lött</rdg>
                            <rdg wit="#K5j" xml:id="rdg.10">Kirallya erdemmel lött</rdg>
                            <rdg wit="#K-Id" xml:id="rdg.11">Királlyá érdemmel lőtt Gábor,
                                Gábór</rdg>
                            <rdg wit="#K-II" xml:id="rdg.12">Királlyá érdemmel lött</rdg>
                            <rdg wit="#K-IIa" xml:id="rdg.13">királlyá erdemmel lött</rdg>
                            <rdg wit="#K-IIc" xml:id="rdg.14">Királlya érdemmel lőtt</rdg>
                            <rdg wit="#K-III" xml:id="rdg.15">Királlya érdemmel lött</rdg>
                            <rdg wit="#K-IIIa" xml:id="rdg.16">királlya érdemmel lött</rdg>
                        </app></l>
                    <l n="2" xml:id="l.2"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Vané hired benne, Törvént kér sok
                                jámbor,</lem>
                            <rdg wit="#K1" xml:id="rdg.17">Nem láddé miként njeg lator alatt
                                jámbor?</rdg>
                            <rdg wit="#K2" xml:id="rdg.18">Nem látod, mikint nyég és mint sír sok
                                Jámbor</rdg>
                            <rdg wit="#K3" xml:id="rdg.19">Nem latod, mikint nyég es mint sir sok
                                jambor</rdg>
                            <rdg wit="#K4a" xml:id="rdg.20">Vayha látnád, mint nyeg Sajtóban </rdg>
                            <rdg wit="#K4b" xml:id="rdg.21">Vajha látnád, mint nyög sajtóban</rdg>
                            <rdg wit="#K10j" xml:id="rdg.22">Vajha látnád, mint nyeg sajtoba</rdg>
                            <rdg wit="#K5a" xml:id="rdg.23">Vané hired benne, miként nyeg</rdg>
                            <rdg wit="#K6a" xml:id="rdg.24">nincsen hired benne, miként nyeg</rdg>
                            <rdg wit="#K-I" xml:id="rdg.25">Vajha látnád, mint nyeg sajtoban</rdg>
                            <rdg wit="#K-Ia" xml:id="rdg.26">Vajha látnád, mint njek sajtoban</rdg>
                            <rdg wit="#K-Ib" xml:id="rdg.27">Vajha látnád, mint nyeg Sajtoban</rdg>
                            <rdg wit="#K5j" xml:id="rdg.28">Vajha látnád, mint nyög sajtóban</rdg>
                            <rdg wit="#K-Id #K-II #K-IIa #K-IIc" xml:id="rdg.29"> Vajha látnád, mint
                                nyeg sajtóban</rdg>
                            <rdg wit="#K-III #K-IIIa" xml:id="rdg.30">Vajha látnád, mint nyeg
                                Sajtoban</rdg>
                        </app></l>
                    <l n="3" xml:id="l.3"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Magyar nemzet vala veled bátor
                                tábor,</lem>
                            <rdg wit="#K1" xml:id="rdg.31">Christus akla vala</rdg>
                            <rdg wit="#K5a" xml:id="rdg.32">bátor Bátor Tábor</rdg>
                        </app></l>
                    <l n="4" xml:id="l.4">Már nem vagyunk bátor, mert te sem vagy, Gábor.</l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="5" xml:id="l.5"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">A’ pénzt nem szeretted soha csak ugy mint
                                pénszt,</lem>
                            <rdg wit="#K-IIc" xml:id="rdg.33">pénzt sem</rdg>
                            <rdg wit="#K-III #K-IIIa" xml:id="rdg.34">Az pénzt</rdg>
                        </app></l>
                    <l n="6" xml:id="l.6"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Noha le hortál te fellyülröl sok
                                erszént,</lem>
                            <rdg wit="#K1" xml:id="rdg.35">Igaz, hogy le hortál Lompostol</rdg>
                            <rdg wit="#K2" xml:id="rdg.36"><del>Erszént</del><add type="corr"
                                    >Erszényt</add></rdg>
                            <rdg wit="#K4a" xml:id="rdg.37">Igaz, hogy le hordtál Lompostol</rdg>
                            <rdg wit="#K4b" xml:id="rdg.38"> Igaz, hogy le hortál Lompostól</rdg>
                            <rdg wit="#K10j" xml:id="rdg.39">Igaz, hogy le hortál Lomposbol;
                                erszénynt</rdg>
                            <rdg wit="#K5a" xml:id="rdg.40">te Lompostol sok Erszényt</rdg>
                            <rdg wit="#K6a" xml:id="rdg.41">te lompostol</rdg>
                            <rdg wit="#NASZ" xml:id="rdg.42">le hortál Némettöl</rdg>
                            <rdg wit="#K-I" xml:id="rdg.43">Igaz, hogy le hortál lompostól</rdg>
                            <rdg wit="#K-Ia" xml:id="rdg.44">Igaz, hogy le hortál Lomposbol sok
                                Erszénjt</rdg>
                            <rdg wit="#K-Ib" xml:id="rdg.45">Igaz, le hortál Lompostol sok
                                erszényt</rdg>
                            <rdg wit="#K5j" xml:id="rdg.46">Igaz, le hortál Lompostol</rdg>
                            <rdg wit="#K-Id" xml:id="rdg.47">Igaz, hogj le hordtál Lompostol</rdg>
                            <rdg wit="#K-II #K-IIa" xml:id="rdg.48">Igaz, hógy le hordtál
                                Némettöl</rdg>
                            <rdg wit="#K-IIc" xml:id="rdg.49">Igaz, hogy le hordtál Némettöl</rdg>
                            <rdg wit="#K-III" xml:id="rdg.50">Igaz, hógy le hortál Lompostol</rdg>
                            <rdg wit="#K-IIIa" xml:id="rdg.51">Igaz, hogy le hortál Lompostul</rdg>
                        </app></l>
                    <l n="7" xml:id="l.7"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">De nem voltál te György, sem
                                    Lupu<corr>j</corr> e szerént,<note type="critic" xml:id="note.2"
                                    >A Györgyre és Lupujra való célzás arra az eseményre vonatkozik,
                                    amikor <persName>I. Rákóczi György<idno type="ITIdata"
                                            >Q53757</idno></persName> „az havaselji állapotban kezdé
                                    magát egyvelíteni magános haszonért… [Ti. a két havasalföldi
                                    fejedelem, a török által beiktatott <persName>Vasile Lupu<idno
                                            type="VIAF">VIAF:153189336</idno></persName> (ur. <date
                                        from="1634" to="1653">1634– 1653</date>) és a trónkövetelő
                                        <persName>Matei Basarab<idno type="VIAF"
                                            >VIAF:22988422</idno></persName> (ur. <date from="1632"
                                        to="1654">1632–1654</date>) viszálykodását a saját hasznára
                                    fordította.] Ez császár szakállábán kapás és privatum commodum
                                    lön kezdeti és fundamentuma az mi veszedelmünknek.”
                                        (<bibl>Kemény János: I. m. 213.</bibl>) Rozsnyai, aki a
                                            <title><hi rend="italic">Horologium
                                        turcicum</hi></title>ban, valamint naplójában (3a.) szintén
                                    elítélte a <hi rend="italic">privatum commodum</hi> űzését, a
                                    jelek szerint mind <persName>Rákóczi<idno
                                            corresp="I. Rákóczi György"/></persName>, mind
                                        <persName>Vasile Lupu</persName> törekvését úgy ítélte meg,
                                    hogy a maguk haszna érdekében kockáztatták a köz
                                javát.</note></lem>
                            <rdg wit="#K2" xml:id="rdg.52"><del>Luppuj</del><add type="corr"
                                    >Luppul</add></rdg>
                            <rdg wit="#K4a" xml:id="rdg.53">a’ szerént</rdg>
                            <rdg wit="#K10j" xml:id="rdg.54">Lupul</rdg>
                            <rdg wit="#K7a" xml:id="rdg.55">Lupul</rdg>
                            <rdg wit="#K-I" xml:id="rdg.56">se Lupul</rdg>
                            <rdg wit="#K-Ia" xml:id="rdg.57">se; eszerínt</rdg>
                            <rdg wit="#K-Ib" xml:id="rdg.58">e szerint</rdg>
                            <rdg wit="#K5j" xml:id="rdg.59">e’ szerint</rdg>
                            <rdg wit="#K-III" xml:id="rdg.60">é szerint</rdg>
                        </app></l>
                    <l n="8" xml:id="l.8"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Világ szerte tötted a’ sók jó
                                tétemént.</lem>
                            <rdg wit="#K2" xml:id="rdg.61"><del>jótétemént</del><add type="corr"
                                    >jótéteményt</add></rdg>
                            <rdg wit="#K4b" xml:id="rdg.62">tetted</rdg>
                            <rdg wit="#K10j" xml:id="rdg.63">teteményt</rdg>
                            <rdg wit="#K6a" xml:id="rdg.64">tétemenyt</rdg>
                            <rdg wit="#K-I" xml:id="rdg.65">tetted</rdg>
                            <rdg wit="#K-Ia" xml:id="rdg.66">téteménjt</rdg>
                            <rdg wit="#K-Ib" xml:id="rdg.67">téteményt</rdg>
                            <rdg wit="#K5j" xml:id="rdg.68">tetted; teteményt</rdg>
                            <rdg wit="#K-Id" xml:id="rdg.69">tetted; téteményt</rdg>
                            <rdg wit="#K-III" xml:id="rdg.70">Világ szerte széllyel töttél</rdg>
                            <rdg wit="#K-IIIa" xml:id="rdg.71">Világ szerte széllyel töttél jó
                                téteményt</rdg>
                        </app></l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="9" xml:id="l.9"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Nincsen vétek nélkül rollad sokat
                                szolni,</lem>
                            <rdg wit="#K2 #K3" xml:id="rdg.72">Nincs</rdg>
                            <rdg wit="#K10j" xml:id="rdg.73">szokat</rdg>
                            <rdg wit="#K7a" xml:id="rdg.74">nélk<add type="insert">ül</add></rdg>
                            <rdg wit="#K-Ia #K-Ib" xml:id="rdg.75">rollad szolni</rdg>
                            <rdg wit="#K5j" xml:id="rdg.76">rolad szolni</rdg>
                            <rdg wit="#K-Id" xml:id="rdg.77">rollad szolni</rdg>
                        </app></l>
                    <l n="10" xml:id="l.10"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Sokkal nagyóbb vétek nemis
                                emlegetni,</lem>
                            <rdg wit="#K3" xml:id="rdg.78">nagyubb</rdg>
                            <rdg wit="#K6a" xml:id="rdg.79">nagyobb botlás</rdg>
                            <rdg wit="#K-Ib" xml:id="rdg.80">Nagyabb</rdg>
                        </app></l>
                    <l n="11" xml:id="l.11"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Egyebet nem tudunk felölled
                                mondani,</lem>
                            <rdg wit="#K1" xml:id="rdg.81">nem tudok</rdg>
                            <rdg wit="#K-I" xml:id="rdg.82">felölled nem tudunk</rdg>
                            <rdg wit="#K-Ia" xml:id="rdg.83">felőlled nem tudunk</rdg>
                            <rdg wit="#K-Ib" xml:id="rdg.84">Felölled nem tudunk</rdg>
                            <rdg wit="#K5j" xml:id="rdg.85">Felöled nem tudunk</rdg>
                            <rdg wit="#K-Id" xml:id="rdg.86">felőlled nem tudunk</rdg>
                        </app></l>
                    <l n="12" xml:id="l.12"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">Ha használnánk vélle, nem szánnánk ki
                                    vajni.<note type="critic" xml:id="note.3">kivájni, ti. a
