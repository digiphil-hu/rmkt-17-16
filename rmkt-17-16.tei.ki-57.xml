    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 57.</fw>
                <head type="title">À <hi rend="bold">VI</hi>GASZTA<hi rend="bold">L</hi>Ó SZENT <hi
                        rend="bold">L</hi>É<hi rend="bold">L</hi>EK<hi rend="bold">Ú</hi>R <hi
                        rend="bold">I</hi>STENHEZ KESER<hi rend="bold">V</hi>ES ÉS KESERE<hi
                        rend="bold">D</hi>ET SZ<hi rend="bold">I</hi><hi rend="bold">V</hi>E<hi
                        rend="bold">M</hi>NEK B<hi rend="bold">Ú</hi>S ÉS B<hi rend="bold">V</hi>ZGÓ
                        KÖN<hi rend="bold">Y</hi>ÖRGÉSE</head>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1">Szent Lélek úr Isten, malasztod súgára,</l>
                    <l n="2" xml:id="l.2">könyörgök te néked, érien te szolgádra,</l>
                    <l n="3" xml:id="l.3">szállyon reâ szolgádnak szive hailékára,</l>
                    <l n="4" xml:id="l.4">s-oda jútásával hozzon vigasságra.</l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="5" xml:id="l.5">Mert szivem egy felöl az inség taplóia,</l>
                    <l n="6" xml:id="l.6">bé eset à melyben az búnak szikráia,</l>
                    <l n="7" xml:id="l.7">sorsa rab feiemnek mind úntalan fuiia,</l>
                    <l n="8" xml:id="l.8">lángot vetet immár, s-igen lobog lángia.</l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="9" xml:id="l.9">Más felöl pediglen keserüség ária</l>
                    <l n="10" xml:id="l.10">s-à nyomorúságnak nagy sok sürö habia</l>
                    <l n="11" xml:id="l.11">s-ily két féle veszély mind egyaránt iária,</l>
                    <l n="12" xml:id="l.12">kel mindenikében kegyelmed oláiia.</l>
                </lg>
                <lg n="4" xml:id="lg.4">
                    <l n="13" xml:id="l.13">Meg vallom szivemnek tisztátalanságát,</l>
                    <l n="14" xml:id="l.14">bünnek fekélyével rakodott rútságát,</l>
                    <l n="15" xml:id="l.15">vétkeimmel forró ezernyi hivságát,</l>
                    <l n="16" xml:id="l.16">el faiúlt, rosz voltát, undok ocsmányságát.</l>
                </lg>
                <lg n="5" xml:id="lg.5">
                    <l n="17" xml:id="l.17">De az te kegyelmed rútságát tiszticsa,</l>
                    <l n="18" xml:id="l.18">szencséges malasztod fekélyét gyogyicsa,</l>
                    <l n="19" xml:id="l.19">világ hivságátúl magadhoz fordicsa,</l>
                    <l n="20" xml:id="l.20">hogy magát magadnak éppen tisztán nyúicsa.</l>
                </lg>
                <lg n="6" xml:id="lg.6">
                    <l n="21" xml:id="l.21">Magát néked nyúitva bú lángia neméri,</l>
                    <l n="22" xml:id="l.22">bánatnak szikráiát nagy könnyen el türi,</l>
                    <l n="23" xml:id="l.23">inség ária s-habia örvényben nem veri,</l>
                    <l n="24" xml:id="l.24">semmiféle veszély sorsában nem gyötri.</l>
                </lg>
                <lg n="7" xml:id="lg.7">
                    <l n="25" xml:id="l.25">Lészen mert oltalma minden veszéllyében,</l>
                    <l n="26" xml:id="l.26">bátorságos partya örvény mélységében,</l>
                    <l n="27" xml:id="l.27">kedves melegsége fagylaló hidegben</l>
                    <l n="28" xml:id="l.28">s-lengedezö szele forró hévségében.</l>
                </lg>
                <lg n="8" xml:id="lg.8">
                    <l n="29" xml:id="l.29">Szomorúságában lészen vigassága,</l>
                    <l n="30" xml:id="l.30">fáradságábanis kedves mulatsága,</l>
                    <l n="31" xml:id="l.31">rettegö féltében erös bátorsága</l>
                    <l n="32" xml:id="l.32">s-minden inségében fris nagy vidámsága.</l>
                </lg>
                <lg n="9" xml:id="lg.9">
                    <l n="33" xml:id="l.33">Légy hát én szivemnek ö kedves vendége,</l>
                    <l n="34" xml:id="l.34">szent malasztod által helyre ál épsége,</l>
                    <l n="35" xml:id="l.35">jutot vendégében lészen ékessége</l>
                    <l n="36" xml:id="l.36">s-ékessen ragyogó, tündöklö szépsége.</l>
                </lg>
                <lg n="10" xml:id="lg.10">
                    <l n="37" xml:id="l.37">Jüjj el, készen várlak, szentséges szent Lélek,</l>
                    <l n="38" xml:id="l.38">szály bé én szivemben, téged szivbül kérlek,</l>
                    <l n="39" xml:id="l.39">ha szivemben érlek, á bútúl nem félek,</l>
                    <l n="40" xml:id="l.40">örömet reménlek, söt örömben élek.</l>
                </lg>
            </div>
