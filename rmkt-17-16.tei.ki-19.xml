    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 19.</fw>
                <head type="title">MINDENEK FÖLÖT EMBERNEK ELSÖBEN LELKÉRE, ANNAK UTÁNNA BÖCSÜLETIRE
                    KEL JÓ GONDOT VISELNI</head>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1"><hi rend="bold">M</hi>ost mások örömben virágzó kertekben
                        kedvekre sétálnak,</l>
                    <l n="2" xml:id="l.2"><hi rend="bold">j</hi>ártokban beszélve s-nyájassan
                        trécsélve egy mással mulatnak,</l>
                    <l n="3" xml:id="l.3"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1"><hi rend="bold">n</hi>evetnek, kaczagnak,
                                semmin sem búsúlnak, s-nagy frissen vigadnak.</lem>
                            <rdg wit="#W1" xml:id="rdg.1">Nevetnek s-kaczagnak</rdg>
                        </app></l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="4" xml:id="l.4"><hi rend="bold">D</hi>e én szegény fejem, se napom, sem
                        éijem, úntalan bánkodom,</l>
                    <l n="5" xml:id="l.5"><hi rend="bold">e</hi>gyedül rekesztve s-az vasban heverve
                        törödöm, s-aggódom,</l>
                    <l n="6" xml:id="l.6"><hi rend="bold">n</hi>incs, ki hozzám szóllyon, s-engem
                        vigasztallyon, méltán szomorkodom.</l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="7" xml:id="l.7"><hi rend="bold">É</hi>hezni nem szoktam, mástis jól
                        tartottam, s-koplalás éheztet,</l>
                    <l n="8" xml:id="l.8"><hi rend="bold">*k</hi>enyérnek csak ize s-Latorczának
                        vize soványan tengödtet,</l>
                    <l n="9" xml:id="l.9"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2"><hi rend="bold">F</hi>öt étek szagával,
                                még csak illattyával senki nemis értet.</lem>
                            <rdg wit="#W1" xml:id="rdg.2">illyattyával</rdg>
                        </app></l>
                </lg>
                <lg n="4" xml:id="lg.4">
                    <l n="10" xml:id="l.10"><hi rend="bold">Ö</hi>szülve s törödve, gyötrödve
                        s-epedve képes hát aggódnom,</l>
                    <l n="11" xml:id="l.11"><hi rend="bold">l</hi>ankadva s-bágyadva, éhezve
                        s-koplalva illendö búsúlnom,</l>
                    <l n="12" xml:id="l.12"><hi rend="bold">ö</hi>ldöklö sorsomon s-kemény
                        rabságomon méltó szomorkodnom.</l>
                </lg>
                <lg n="5" xml:id="lg.5">
                    <l n="13" xml:id="l.13"><hi rend="bold">*T</hi>ekintve két felé s-akar mennyi
                        felé senkit nem láthatok,</l>
                    <l n="14" xml:id="l.14"><hi rend="bold">e</hi>gy jó barátommal s-egy jóakarómmal
                        egyet nem szólhatok,</l>
                    <l n="15" xml:id="l.15"><hi rend="bold">m</hi>ástúlis felölök, mert csak magam
                        ülök, semmit nem halhatok.</l>
                </lg>
                <lg n="6" xml:id="lg.6">
                    <l n="16" xml:id="l.16"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3"><hi rend="bold">B</hi>ézártak, bé csuktak,
                                s-ablakot sem hattak szoros erkélyemen,</lem>
                            <rdg wit="#W1" xml:id="rdg.3">Bezartak s-be csuktak</rdg>
                        </app></l>
                    <l n="17" xml:id="l.17"><hi rend="bold">é</hi>hen koplaltatnak, s-vasban verve
                        tartnak, bú bánat szivemen,</l>
                    <l n="18" xml:id="l.18"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4"><hi rend="bold">r</hi>abságomnak sorsa
                                s-lábaimnak vasa nagy teher fejemen.</lem>
                            <rdg wit="#W1" xml:id="rdg.4">fejemnek</rdg>
                        </app></l>
                </lg>
                <lg n="7" xml:id="lg.7">
                    <l n="19" xml:id="l.19"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5"><hi rend="bold">N</hi>em szabad embernek,
                                egy szóval senkinek én hozzám bé jönni,</lem>
                            <rdg wit="#W1" xml:id="rdg.5">be jűnny</rdg>
                        </app></l>
                    <l n="20" xml:id="l.20"><hi rend="bold">e</hi>ngemet se látni, se meg
                        vigasztalni, s-rajtam szánakodni,</l>
                    <l n="21" xml:id="l.21"><hi rend="bold">*k</hi>önyörülö szivet, se pedig jó
                        kedvet én hozzám mutatni.</l>
                </lg>
                <lg n="8" xml:id="lg.8">
                    <l n="22" xml:id="l.22"><hi rend="bold">E</hi>gyet ha ki szólna, s-engem
                        vigasztalna, vennék gyanóságban,</l>
                    <l n="23" xml:id="l.23"><hi rend="bold">l</hi>abancznak mondanák, árúlónak
                        fognàk, s-tennék árestomban,</l>
                    <l n="24" xml:id="l.24"><hi rend="bold">s</hi>öt nemcsak meg vetnék, még megis
                        büntetnék, s-vernék talám vasban.</l>
                </lg>
                <lg n="9" xml:id="lg.9">
                    <l n="25" xml:id="l.25"><hi rend="bold">Ö</hi>rül de valaki, légyen az akár ki,
                        az én rabságomnak,</l>
                    <l n="26" xml:id="l.26"><hi rend="bold">b</hi>öcsülete lehet, nagy gratiát
                        nyerhet azzal ö magánák,</l>
                    <l n="27" xml:id="l.27"><hi rend="bold">é</hi>rdeme, hitele, elömenetele vanis
                        ollyanoknak.</l>
                </lg>
                <lg n="10" xml:id="lg.10">
                    <l n="28" xml:id="l.28"><hi rend="bold">N</hi>em egyszer gondoltam, sokszoris
                        forgattam magam elméjében,</l>
                    <l n="29" xml:id="l.29"><hi rend="bold">l</hi>ennék ha Töröknek, pogány
                        ellenségnek az ö tömlöczében,</l>
                    <l n="30" xml:id="l.30"><hi rend="bold">e</hi>nnyi boszontásom, vólna é tartásom
                        mostoháb kezekben.</l>
                </lg>
                <lg n="11" xml:id="lg.11">
                    <l n="31" xml:id="l.31"><hi rend="bold">L</hi>áthatnám az napot, valaha talám ot
                        emberrel szólhatnék,</l>
                    <l n="32" xml:id="l.32"><hi rend="bold">k</hi>avém és föt étkem lenne talám
                        nékem, s fris eget vehetnék,</l>
                    <l n="33" xml:id="l.33"><hi rend="bold">e</hi>ngednének gyónnom, és megis
                        áldoznom, ha papot kaphatnék.</l>
                </lg>
                <lg n="12" xml:id="lg.12">
                    <l n="34" xml:id="l.34"><hi rend="bold">R</hi>eâm fenik fogokat, látom,
                        agyarokat igen köszörülik,</l>
                    <l n="35" xml:id="l.35"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6"><corr><hi rend="bold">*e</hi>l
                                    epedé</corr>semet s-meg emésztésemet nemis keserülik,</lem>
                            <rdg wit="#W1" xml:id="rdg.6">el epedésemet</rdg>
                            <rdg wit="#W2" xml:id="rdg.7"><note type="critic" xml:id="note.1"
                                    >nyomdahiba</note></rdg>
                        </app></l>
                    <l n="36" xml:id="l.36"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7"><hi rend="bold">a</hi>karnák,
                                    <corr>go</corr>ndolom, ma lenne halálom, s-kinomat örülik.</lem>
                            <rdg wit="#W1" xml:id="rdg.8">gondolom</rdg>
                            <rdg wit="#W2" xml:id="rdg.9"><note type="critic" xml:id="note.2"
                                    >nyomdahiba</note></rdg>
                        </app></l>
                </lg>
                <lg n="13" xml:id="lg.13">
                    <l n="37" xml:id="l.37"><hi rend="bold">N</hi>em vétettem annyit, hogy
                        szenvedgyek ennyit, úgy tartom magamban,</l>
                    <l n="38" xml:id="l.38"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8"><hi rend="bold">n</hi>em öltem
                                    Társom<corr>n</corr>ak, Apját s-Annyát másnak éltem
                                napjaiban,</lem>
                            <rdg wit="#W1" xml:id="rdg.10">napjaimban</rdg>
                        </app></l>
                    <l n="39" xml:id="l.39"><hi rend="bold">a</hi>z prædán sem kaptam, s-más javát
                        sem dúltam, ha mód vóltis abban.</l>
                </lg>
                <lg n="14" xml:id="lg.14">
                    <l n="40" xml:id="l.40"><hi rend="bold">K</hi>el tehát ennyire s-illy szörnyü
                        inségre vallyon miért jutnom,</l>
                    <l n="41" xml:id="l.41"><hi rend="bold">v</hi>étkemért, bünömért, hivságos
                        éltemért, bizonnyal kel tudnom,</l>
                    <l n="42" xml:id="l.42"><hi rend="bold">t</hi>udom, de Munkácsban, mint sem hogy
                        pokolban, job nekem kinlodnom.</l>
                </lg>
                <lg n="15" xml:id="lg.15">
                    <l n="43" xml:id="l.43"><hi rend="bold">A</hi>ldot légy, Istenem, ki ezt meg
                        ösmémem adtad malasztodat,</l>
                    <l n="44" xml:id="l.44"><hi rend="bold">n</hi>em erdemelhettem, mert sokszor
                        vétkeztem, illy nagy irgalmadat,</l>
                    <l n="45" xml:id="l.45"><hi rend="bold">n</hi>em érdemlem, tudom, ha jól
                        gondolkodom, illy kegyes vóltodat.</l>
                </lg>
                <lg n="16" xml:id="lg.16">
                    <l n="46" xml:id="l.46"><hi rend="bold">*A</hi>zért, hogy bünösre s-reâm,
                        érdemetlenre nyujtád kezeidet,</l>
                    <l n="47" xml:id="l.47"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9"><hi rend="bold">b</hi>ünömöt nem nézve
                                s-vétkem sem tekintve adád kegyelmedet,</lem>
                            <rdg wit="#W1" xml:id="rdg.11">tekéntve</rdg>
                        </app></l>
                    <l n="48" xml:id="l.48"><hi rend="bold">ö</hi>rökké imádom, s-háladással áldom
                        szentséges nevedet.</l>
                </lg>
                <lg n="17" xml:id="lg.17">
                    <l n="49" xml:id="l.49"><hi rend="bold">C</hi>sudálhatom tehát, hogy elmém nem
                        nyughat, mert nincs min búsúlnom,</l>
                    <l n="50" xml:id="l.50"><hi rend="bold">z</hi>áport szemeimbül s-húllot
                        könyveimbül nem kel árasztanom,</l>
                    <l n="51" xml:id="l.51"><hi rend="bold">ü</hi>gyemnek súly sorsán s-lábaimnak
                        vasán sem kel sohaitanom.</l>
                </lg>
                <lg n="18" xml:id="lg.18">
                    <l n="52" xml:id="l.52"><hi rend="bold">L</hi>átom, hogy örömben, mint sem
                        törödésben méltób inkáb lennem,</l>
                    <l n="53" xml:id="l.53"><hi rend="bold">e</hi>nyhödöt szivemre s-csendes
                        életemre most kezdettem lépnem,</l>
                    <l n="54" xml:id="l.54"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10"><hi rend="bold">t</hi>aláltam nyugtomat,
                                nem tudom gondomat, s-bútúl sem kel félnem.</lem>
                            <rdg wit="#W1" xml:id="rdg.12">Tanáltam</rdg>
                        </app></l>
                </lg>
                <lg n="19" xml:id="lg.19">
                    <l n="55" xml:id="l.55"><hi rend="bold">I</hi>stennek szolgálva s-irgalmátis
                        várva most könyöröghetek,</l>
                    <l n="56" xml:id="l.56"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11"><hi rend="bold">r</hi>út sok vétkeimrül,
                                én sok büneimrül kesergést tehetek,</lem>
                            <rdg wit="#W1" xml:id="rdg.13">vétkeimrűl, s-én</rdg>
                        </app></l>
                    <l n="57" xml:id="l.57"><hi rend="bold">*é</hi>s igy mostanában poenitentiában
                        csendessen élhetek.</l>
                </lg>
                <lg n="20" xml:id="lg.20">
                    <l n="58" xml:id="l.58"><hi rend="bold">K</hi>egyelmét Istennek, jót ád rab
                        fejemnek, naponként várhatom,</l>
                    <l n="59" xml:id="l.59">elmémet kordélyban<note type="critic" xml:id="note.3"
                            >vaktában, haszontalanul, hiábavalóan</note><hi rend="bold">
                        s</hi>-világi hivságban immár nem futtatom,</l>
                    <l n="60" xml:id="l.60"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12"><hi rend="bold">*l</hi>ótva avagy futva
                                s-héában koslatva magam sem fárasztom.</lem>
                            <rdg wit="#W1" xml:id="rdg.14">koslotva</rdg>
                        </app></l>
                </lg>
                <lg n="21" xml:id="lg.21">
                    <l n="61" xml:id="l.61"><app xml:id="app.13">
                            <lem wit="#KK" xml:id="lem.13"><hi rend="bold">I</hi>rigyimnek mérge, se
                                kegyetlensége fejem nem érdekli,</lem>
                            <rdg wit="#W1" xml:id="rdg.15">Irégyimnek</rdg>
                        </app></l>
                    <l n="62" xml:id="l.62"><hi rend="bold">o</hi>lálkodó lese, se dühösködése most
                        nemis kerüli,</l>
                    <l n="63" xml:id="l.63"><hi rend="bold">g</hi>ondolom, rabságom, mert
                        nyomorúságom senki nem irigyli.</l>
                </lg>
                <lg n="22" xml:id="lg.22">
                    <l n="64" xml:id="l.64"><hi rend="bold">O</hi>ltalmára másnak gondot már
                        magamnak most nemkel viselnem,</l>
                    <l n="65" xml:id="l.65"><app xml:id="app.14">
                            <lem wit="#KK" xml:id="lem.14"><hi rend="bold">n</hi>em kel illyenekben,
                                se töb effélékben búsúlnom s-epednem,</lem>
                            <rdg wit="#W1" xml:id="rdg.16">illyeneken; efféléken</rdg>
                        </app></l>
                    <l n="66" xml:id="l.66"><hi rend="bold">d</hi>olgaimnak folytát s-magamnakis
                        nyugtát nem kel hát meg vetnem.</l>
                </lg>
                <lg n="23" xml:id="lg.23">
                    <l n="67" xml:id="l.67"><hi rend="bold">O</hi>lly karban volt sorsom, Füleken
                        lakásom, kárban kellet esnem,</l>
                    <l n="68" xml:id="l.68"><hi rend="bold">*t</hi>ett esküvésemet, jól tudom,
                        hitemet nemkel felejtenem,</l>
                    <l n="69" xml:id="l.69"><app xml:id="app.15">
                            <lem wit="#KK" xml:id="lem.15"><hi rend="bold">v</hi>agy hogy
                                mindenemnek, vagy böcsületemnek vesztét kel szenvednem.</lem>
                            <rdg wit="#W1" xml:id="rdg.17">mindeneknek</rdg>
                        </app></l>
                </lg>
                <lg n="24" xml:id="lg.24">
