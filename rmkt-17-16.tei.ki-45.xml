            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 45.</fw>
                <head type="title">AZ RAB VASAT PENGET</head>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1"><hi rend="bold">A</hi>z hárfás nótáját hárfáján
                        pengeti,</l>
                    <l n="2" xml:id="l.2">és azzal sokaknak szivét édesiti,</l>
                    <l n="3" xml:id="l.3">de az rab lábára vert vasát csörgeti,</l>
                    <l n="4" xml:id="l.4">s-annak csörgésével magát keseriti.</l>
                </lg>
                <lg n="2" xml:id="lg.2">
                    <l n="5" xml:id="l.5"><hi rend="bold">*Z</hi>engése az hárfás pengö
                        hárfájának</l>
                    <l n="6" xml:id="l.6">nevetö örömet szerez iffiaknak,</l>
                    <l n="7" xml:id="l.7">csörgése pediglen lábokra vert vasnak</l>
                    <l n="8" xml:id="l.8">siralmas bánatot nevel az raboknak.</l>
                </lg>
                <lg n="3" xml:id="lg.3">
                    <l n="9" xml:id="l.9"><hi rend="bold">R</hi>endessen vigasztal szabad
                        személyeket</l>
                    <l n="10" xml:id="l.10"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">pengése hárfának és gyenge szüzeket,</lem>
                            <rdg wit="#W2" xml:id="rdg.1">győnge</rdg>
                        </app></l>
                    <l n="11" xml:id="l.11"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">s-az vasnak csörgése szegény
                                leginyeket</lem>
                            <rdg wit="#W1" xml:id="rdg.2">legényeket</rdg>
                            <rdg wit="#W2" xml:id="rdg.3"><del>legínyeket</del><add type="corr"
                                    >legényeket</add></rdg>
                        </app></l>
                    <l n="12" xml:id="l.12">szomorit, rabságban kik töltik élteket.</l>
                </lg>
                <lg n="4" xml:id="lg.4">
                    <l n="13" xml:id="l.13"><hi rend="bold">A</hi>z hárfa pengése ollykor
                        mosolygásra</l>
                    <l n="14" xml:id="l.14"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">fel-inditt, s-el-inditt ollykor az fris
                                tánczra,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.4">a’ fris</rdg>
                        </app></l>
                    <l n="15" xml:id="l.15">csörgése az vasnak à rabot sirásra</l>
                    <l n="16" xml:id="l.16"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">indittya s-keserves, méltó
                                búsúlásra.</lem>
                            <rdg wit="#W2" xml:id="rdg.5">indittya keserves</rdg>
                        </app></l>
                </lg>
                <lg n="5" xml:id="lg.5">
                    <l n="17" xml:id="l.17"><hi rend="bold">*B</hi>úval el-keserültt szivnek
                        édességet,</l>
                    <l n="18" xml:id="l.18">az hárfa pengése szerez csendességet,</l>
                    <l n="19" xml:id="l.19">csörgése az vasnak raboknak inséget</l>
                    <l n="20" xml:id="l.20">támaszt, nevel, s-áraszt sok keserüséget.</l>
                </lg>
                <lg n="6" xml:id="lg.6">
                    <l n="21" xml:id="l.21"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5"><hi rend="bold">V</hi>idámittya embert,
                                s-jó kedvét újittya</lem>
                            <rdg wit="#W2" xml:id="rdg.6">uyétya</rdg>
                        </app></l>
                    <l n="22" xml:id="l.22">pengése hárfának, s-örömre jutattya,</l>
                    <l n="23" xml:id="l.23">s-az vasnak csörgése rab szivét búsittya,</l>
                    <l n="24" xml:id="l.24">úntalan fárasztya, s-úntalan faggattya.</l>
                </lg>
                <lg n="7" xml:id="lg.7">
                    <l n="25" xml:id="l.25"><hi rend="bold">A</hi>z hárfa pengése üdöt
                        mulatattya,</l>
                    <l n="26" xml:id="l.26"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">s-annak hoszszú folytát röviddé
                                fordittya,</lem>
                            <rdg wit="#W1" xml:id="rdg.7">hoszú</rdg>
                            <rdg wit="#W2" xml:id="rdg.8">hoszú; fordéttya</rdg>
                        </app></l>
                    <l n="27" xml:id="l.27"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">csörgése az vasnak azt meg
                                hoszszabittya,</lem>
                            <rdg wit="#W1" xml:id="rdg.9">azt meg szabadittya</rdg>
                            <rdg wit="#W2" xml:id="rdg.10">azt meg hoszabitya</rdg>
                        </app></l>
                    <l n="28" xml:id="l.28">fertályát órának nappá változtattya.</l>
                </lg>
                <lg n="8" xml:id="lg.8">
                    <l n="29" xml:id="l.29"><hi rend="bold">S</hi>zerzi kegyességgel napok
                        fordúlását,</l>
                    <l n="30" xml:id="l.30">pengése hárfának kedvessen járását,</l>
                    <l n="31" xml:id="l.31">s-az vasnak csörgése azoknak folyását,</l>
                    <l n="32" xml:id="l.32">únalmassá teszi raboknál forgását.</l>
                </lg>
                <lg n="9" xml:id="lg.9">
                    <l n="33" xml:id="l.33"><hi rend="bold">A</hi>z hárfának tehátt kegyessen
                        pengését</l>
                    <l n="34" xml:id="l.34">szeresd, mint madárnak szépen éneklését,</l>
                    <l n="35" xml:id="l.35">lábodra vertt vasnak gyülöllyed zörgéset,</l>
                    <l n="36" xml:id="l.36"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">mint füles bagolynak undok
                                üvöltését.</lem>
                            <rdg wit="#W1" xml:id="rdg.11">űvűltésétt</rdg>
                            <rdg wit="#W2" xml:id="rdg.12"><del>űvőltésétt</del><add type="corr"
                                    >sűvőltését</add></rdg>
                        </app></l>
                </lg>
                <lg n="10" xml:id="lg.10">
                    <l n="37" xml:id="l.37"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9"><hi rend="bold">*T</hi>alálok, úgy látom,
                                hárfa pengésében</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.13">Tanálok</rdg>
                        </app></l>
                    <l n="38" xml:id="l.38"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">nem kis külömbséget s-vasnak
                                csörgésében,</lem>
                            <rdg wit="#W2" xml:id="rdg.14">nem kűlőmbségétt</rdg>
                        </app></l>
                    <l n="39" xml:id="l.39">vólt részem valaha annak zengésében,</l>
                    <l n="40" xml:id="l.40">s-ennek-is van mostan részem zörgésében.</l>
                </lg>
                <lg n="11" xml:id="lg.11">
                    <l n="41" xml:id="l.41"><hi rend="bold">P</hi>engése hárfának de miként
                        Istenhez,</l>
                    <l n="42" xml:id="l.42">inditt embert ollykor ö Teremtöjéhez,</l>
                    <l n="43" xml:id="l.43">úgy vasnak cs<corr>ö</corr>rgése ö szent Fölségéhez,</l>
                    <l n="44" xml:id="l.44">jutattya az rabot ingyen kegyelméhez.</l>
                </lg>
                <lg n="12" xml:id="lg.12">
                    <l n="45" xml:id="l.45"><hi rend="bold">E</hi>ziránt mondhatom tehátt, hogy
                        egyezik</l>
                    <l n="46" xml:id="l.46">hárfának pengése, s-nemis külömbözik</l>
                    <l n="47" xml:id="l.47"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">vasnak cs<corr>ö</corr>rgésétül, a
                                mellyel érkezik</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.15">csörgésétül</rdg>
                            <rdg wit="#W3" xml:id="rdg.16">csorgésétül</rdg>
                        </app></l>
                    <l n="48" xml:id="l.48"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12">Istenhez sóhajtó notánk,
                                s-lengedezik.</lem>
                            <rdg wit="#W2" xml:id="rdg.17">Istenhez faszkodó;
                                    <del>s-lengedezik</del><add type="corr">s-zengedezik</add></rdg>
                        </app></l>
                </lg>
                <lg n="13" xml:id="lg.13">
                    <l n="49" xml:id="l.49"><hi rend="bold">N</hi>em jó hátt útálnóm olly musika
                        hangját,</l>
                    <l n="50" xml:id="l.50">melly Istenhez viszi életemnek jajját,</l>
                    <l n="51" xml:id="l.51">le csillappithattya elmém háborúját,</l>
                    <l n="52" xml:id="l.52">s-meg-csendesitheti bús szivemnek árját.</l>
                </lg>
                <lg n="14" xml:id="lg.14">
                    <l n="53" xml:id="l.53"><hi rend="bold">G</hi>yönyörüen s-halkan kegyes
                        pengésében,</l>
                    <l n="54" xml:id="l.54">ha mások örülnek hárfa Zengésében,</l>
                    <l n="55" xml:id="l.55">ennékem legaláb vasam csörgésében,</l>
                    <l n="56" xml:id="l.56">ne légyen bánatom mostan Zörgésében.</l>
                </lg>
                <lg n="15" xml:id="lg.15">
                    <l n="57" xml:id="l.57"><hi rend="bold">E</hi>lég de már eddig ezekrül
                        szóllanom,</l>
                    <l n="58" xml:id="l.58">hárfa pengésérül nem kel gondolkodnom,</l>
                    <l n="59" xml:id="l.59"><app xml:id="app.13">
                            <lem wit="#KK" xml:id="lem.13">vasam csörgésével job lesz
                                fohászkodnom,</lem>
                            <rdg wit="#W2" xml:id="rdg.18">job lészen fászkodnom</rdg>
                        </app></l>
                    <l n="60" xml:id="l.60"><app xml:id="app.14">
                            <lem wit="#KK" xml:id="lem.14">és az Ur Istenhez szivbül
                                sohajtanom.</lem>
                            <rdg wit="#W1" xml:id="rdg.19">ohajtanom</rdg>
                            <rdg wit="#W2" xml:id="rdg.20">szűvbűl óhajtanom</rdg>
                        </app></l>
                </lg>
                <lg n="16" xml:id="lg.16">
                    <l n="61" xml:id="l.61"><app xml:id="app.15">
                            <lem wit="#KK" xml:id="lem.15"><hi rend="bold">*T</hi>ekéntsd, én
                                Istenem, az én rabságomat,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.21">Tekincsd</rdg>
                        </app></l>
                    <l n="62" xml:id="l.62">vigasztald-meg, kérlek, szomorú sorsomat,</l>
                    <l n="63" xml:id="l.63">nevedben bú nélkül pengessem vasamat,</l>
                    <l n="64" xml:id="l.64">s-ajánlom azzalis tenéked magamat.</l>
                </lg>
            </div>
