            <head type="title">E<hi rend="bold">LV</hi>ÉN<hi rend="bold">ÜL</hi>T E<hi rend="bold"
                    >M</hi>BERNEK B<hi rend="bold">Ú</hi>S<hi rend="bold">ÚL</hi>Ó GON<hi
                    rend="bold">D</hi>O<hi rend="bold">L</hi>AT<hi rend="bold">I </hi><milestone
                    unit="p"/><hi rend="bold">V</hi>AG<hi rend="bold">Y</hi> HOG<hi rend="bold"
                    >Y</hi><hi rend="bold">I</hi>NKÁB É<hi rend="bold">L</hi>ETÉNEK <hi rend="bold"
                    >V</hi>ÉGÉR<hi rend="bold">ŰL</hi><milestone unit="p"/>E<hi rend="bold"
                    >LM</hi>É<hi rend="bold">L</hi>KE<hi rend="bold">D</hi>ÉS<hi rend="bold"
                >I</hi></head>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 76/I.</fw>
                <lg n="1" xml:id="lg.1">
                    <l n="1" xml:id="l.1">Ez új esztendöben nézzed ezen képen,</l>
                    <l n="2" xml:id="l.2">Meg fösült fejedet irták le miképpen,</l>
                    <l n="3" xml:id="l.3">S-elhid bizonyára, hogy találták szépen,</l>
                    <l n="4" xml:id="l.4">Mert halálod után lészen ollyan éppen.</l>
                </lg>
            </div>
            <div type="poem" xml:id="d.2" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/16:] 76/II.</fw>
                <lg n="1" xml:id="lg.2">
                    <l n="1" xml:id="l.5">Ha ide tekentek, nizzed ezen képpen,</l>
                    <l n="2" xml:id="l.6">Feiedet, szemedet irtak le miképpen,</l>
                    <l n="3" xml:id="l.7">S-el hid bizonyára, hogy talatak széppen.</l>
                    <l n="4" xml:id="l.8">Mert halalod után lészen ollyan éppen.</l>
                </lg>
            </div>
        </body>
